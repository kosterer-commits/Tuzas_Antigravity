---

<footer class="bg-gradient-to-b from-gray-900 to-black text-white pt-16 pb-8">
    <div class="max-w-7xl mx-auto px-6">
        <!-- Main Footer Content -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12"
        >
            <!-- About Section -->
            <div class="lg:col-span-1">
                <div class="mb-6">
                    <h3 class="text-lg font-bold mb-4">TecNM Campus Pachuca</h3>
                    <p class="text-sm text-gray-400 leading-relaxed">
                        Formando profesionistas comprometidos con el desarrollo
                        tecnológico y social de México desde 1938.
                    </p>
                </div>
                <!-- Logos -->
                <div
                    class="flex items-center gap-3 opacity-70 hover:opacity-100 transition-opacity"
                >
                    <img src="/icons/SEP.png" alt="SEP" class="h-8 w-auto" />
                    <span class="h-6 w-px bg-gray-600"></span>
                    <img
                        src="/icons/TECNM.png"
                        alt="TecNM"
                        class="h-6 w-auto"
                    />
                    <span class="h-6 w-px bg-gray-600"></span>
                    <img
                        src="/icons/TecPachuca.png"
                        alt="ITP"
                        class="h-8 w-auto"
                    />
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h4 class="text-sm font-bold uppercase tracking-wider mb-4">
                    Enlaces Rápidos
                </h4>
                <ul class="space-y-3">
                    {
                        quickLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-gray-400 hover:text-white transition-colors inline-flex items-center gap-2 group"
                                >
                                    <span class="w-0 group-hover:w-2 h-px bg-blue-500 transition-all duration-300" />
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Services -->
            <div>
                <h4 class="text-sm font-bold uppercase tracking-wider mb-4">
                    Servicios
                </h4>
                <ul class="space-y-3">
                    {
                        servicios.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-gray-400 hover:text-white transition-colors inline-flex items-center gap-2 group"
                                >
                                    <span class="w-0 group-hover:w-2 h-px bg-blue-500 transition-all duration-300" />
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Contact -->
            <div>
                <h4 class="text-sm font-bold uppercase tracking-wider mb-4">
                    Contacto
                </h4>
                <ul class="space-y-3 text-sm text-gray-400">
                    <li class="flex items-start gap-3">
                        <svg
                            class="w-5 h-5 mt-0.5 flex-shrink-0 text-blue-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span class="leading-relaxed">
                            Carr. México-Pachuca Km 87.5<br />Pachuca, Hidalgo,
                            México
                        </span>
                    </li>
                    <li class="flex items-center gap-3">
                        <svg
                            class="w-5 h-5 flex-shrink-0 text-blue-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                        <a
                            href="tel:+527717172000"
                            class="hover:text-white transition-colors"
                        >
                            +52 (771) 717 2000
                        </a>
                    </li>
                    <li class="flex items-center gap-3">
                        <svg
                            class="w-5 h-5 flex-shrink-0 text-blue-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <a
                            href="mailto:contacto@itpachuca.edu.mx"
                            class="hover:text-white transition-colors"
                        >
                            contacto@itpachuca.edu.mx
                        </a>
                    </li>
                </ul>

                <!-- Social Media -->
                <div class="mt-6">
                    <h5 class="text-xs font-bold uppercase tracking-wider mb-3">
                        Síguenos
                    </h5>
                    <div class="flex gap-3">
                        {
                            socialMedia.map((social) => (
                                <a
                                    href={social.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="w-10 h-10 bg-gray-800 hover:bg-blue-600 rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110"
                                    aria-label={social.name}
                                >
                                    <svg
                                        class="w-5 h-5"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path d={social.icon} />
                                    </svg>
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-800 pt-8">
            <div
                class="flex flex-col md:flex-row justify-between items-center gap-4"
            >
                <!-- Copyright -->
                <p class="text-xs text-gray-500 text-center md:text-left">
                    &copy; {currentYear} Instituto Tecnológico de Pachuca. Todos los
                    derechos reservados.
                </p>

                <!-- Legal Links -->
                <div class="flex gap-6">
                    {
                        legal.map((link) => (
                            <a
                                href={link.href}
                                class="text-xs text-gray-500 hover:text-white transition-colors"
                            >
                                {link.name}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</footer>
