---
const careers = [
  {
    title: "Ingeniería en Sistemas",
    img: "https://images.unsplash.com/photo-1517694712202-14dd9538aa97?q=80&w=800&auto=format&fit=crop",
  },
  {
    title: "Ingeniería Industrial",
    img: "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?q=80&w=800&auto=format&fit=crop",
  },
  {
    title: "Ingeniería Civil",
    img: "https://images.unsplash.com/photo-1503387762-592deb58ef4e?q=80&w=800&auto=format&fit=crop",
  },
  {
    title: "Arquitectura",
    img: "https://images.unsplash.com/photo-1503387762-592deb58ef4e?q=80&w=800&auto=format&fit=crop",
  }, // Placeholder re-use
  {
    title: "Licenciatura en Administración",
    img: "https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?q=80&w=800&auto=format&fit=crop",
  },
  {
    title: "Ingeniería Química",
    img: "https://images.unsplash.com/photo-1532094349884-543bc11b234d?q=80&w=800&auto=format&fit=crop",
  },
];
---

<section id="oferta" class="py-32 bg-white/60">
  <div class="max-w-7xl mx-auto px-6">
    <div class="mb-20 text-center reveal-on-scroll">
      <h2
        class="text-xs font-bold tracking-[0.2em] uppercase text-gray-500 mb-6"
      >
        Oferta Educativa
      </h2>
      <h3 class="text-4xl md:text-5xl font-bold text-gray-900">
        Define tu Futuro.
      </h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        careers.map((career, index) => (
          <a
            href="#"
            class={`group relative aspect-[4/5] overflow-hidden rounded-sm reveal-on-scroll reveal-delay-${(index % 3) * 100}`}
          >
            <img
              src={career.img}
              alt={career.title}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors" />
            <div class="absolute bottom-0 left-0 p-8 w-full">
              <h4 class="text-xl md:text-2xl font-bold text-white mb-2 translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                {career.title}
              </h4>
              <span class="inline-block text-white/80 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
                Ver Plan de Estudios &rarr;
              </span>
            </div>
          </a>
        ))
      }
    </div>

    <div class="mt-20 text-center reveal-on-scroll">
      <a
        href=`${import.meta.env.BASE_URL}oferta`
        class="btn-label border-b-2 border-black text-black pb-1 hover:text-gray-600 hover:border-gray-600 transition-colors text-sm font-bold tracking-widest uppercase"
      >
        Ver Todas las Carreras
      </a>
    </div>
  </div>
</section>
