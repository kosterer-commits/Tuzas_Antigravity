---
import Layout from "../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
---

<Layout title="Centro de Cómputo - Servicios">
    <!-- Fonts -->

    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap"
        rel="stylesheet"
    />
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <!-- Hero Section -->
    <section class="hero" id="inicio">
        <div class="hero-content">
            <h1>Centro de Cómputo Institucional</h1>
            <p>
                Brindamos soluciones tecnológicas de vanguardia para apoyar la
                misión educativa de nuestra institución
            </p>
            <a href="#correo" class="btn">Descubre Nuestros Servicios</a>
        </div>

        <a
            href="#correo"
            class="scroll-down-indicator"
            aria-label="Ir a la siguiente sección"
        >
            <i class="fas fa-chevron-down"></i>
        </a>
    </section>

    <!-- Servicio: Correo Institucional -->
    <section id="correo" class="service-section">
        <div class="service-content">
            <div class="service-grid">
                <div class="service-text fade-in">
                    <h2 class="service-title">Correo Institucional</h2>
                    <p class="service-description">
                        Ofrecemos cuentas de correo electrónico profesional con
                        dominio institucional, garantizando comunicación segura
                        y eficiente para todos los miembros de nuestra comunidad
                        educativa.
                    </p>

                    <ul class="features-list">
                        <li>
                            <i class="fas fa-book-reader"></i> Asesoría en el uso
                            del sistema
                        </li>
                        <li>
                            <i class="fas fa-wrench"></i> Resolución de incidencias
                            técnicas
                        </li>
                        <li>
                            <i class="fas fa-chalkboard-teacher"></i> Capacitación
                            para usuarios
                        </li>
                        <li>
                            <i class="fas fa-sync-alt"></i> Actualizaciones y mejoras
                            continuas
                        </li>
                        <li>
                            <i class="fas fa-graduation-cap"></i> Soporte para procesos
                            académicos
                        </li>
                    </ul>
                </div>

                <div class="service-image fade-in">
                    <img
                        src={`${BASE}images/Centro de Computo/correo.png`}
                        alt="Servicio de Correo Institucional"
                    />
                </div>
                <div class="cta-buttons">
                    <a href="#" class="btn btn-primary-alt">Acceder al Correo</a
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- Servicio: Sistema Integral de Información -->
    <section id="sii" class="service-section">
        <div class="service-content">
            <div class="service-grid">
                <div class="service-text fade-in">
                    <h2 class="service-title">
                        Sistema Integral de Información
                    </h2>
                    <p class="service-description">
                        Brindamos soporte especializado para el Sistema Integral
                        de Información, la plataforma central que gestiona todos
                        los procesos académicos y administrativos de la
                        institución.
                    </p>

                    <ul class="features-list">
                        <li>
                            <i class="fas fa-check-circle"></i> Asesoría en el uso
                            del sistema
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i> Resolución de incidencias
                            técnicas
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i> Capacitación para
                            usuarios
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i> Actualizaciones y
                            mejoras continuas
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i> Soporte para procesos
                            académicos
                        </li>
                    </ul>
                </div>

                <div class="service-image fade-in">
                    <img
                        src={`${BASE}images/Centro de Computo/sii.png`}
                        alt="Sistema Integral de Información"
                        class="responsive-img"
                    />
                </div>
                <div class="cta-buttons">
                    <a href="#" class="btn btn-primary-alt">Acceder al SII</a>
                    <a href="#" class="btn btn-outline-alt">Solicitar Soporte</a
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- Servicio: Soporte Técnico -->
    <section id="soporte" class="service-section">
        <div class="service-content">
            <div class="service-grid">
                <div class="service-text fade-in">
                    <h2 class="service-title">Soporte y Mantenimiento</h2>
                    <p class="service-description">
                        Ofrecemos mantenimiento preventivo y correctivo para
                        todos los equipos de cómputo de la institución,
                        asegurando su óptimo funcionamiento y prolongando su
                        vida útil.
                    </p>

                    <ul class="features-list">
                        <li>
                            <i class="fas fa-laptop-medical"></i> Diagnóstico y reparación
                            de equipos
                        </li>
                        <li>
                            <i class="fas fa-download"></i> Instalación de software
                            autorizado
                        </li>
                        <li>
                            <i class="fas fa-shield-alt"></i> Mantenimiento preventivo
                            regular
                        </li>
                        <li>
                            <i class="fas fa-memory"></i> Actualizaciones de hardware
                        </li>
                        <li>
                            <i class="fas fa-headset"></i> Asesoría técnica especializada
                        </li>
                    </ul>
                </div>
                <div class="service-image fade-in">
                    <img
                        src={`${BASE}images/Centro de Computo/soporte.png`}
                        alt="Soporte y Mantenimiento"
                        class="responsive-img"
                    />
                </div>
            </div>
            <div class="cta-buttons">
                <a href="#" class="btn btn-primary-alt">Solicitar Soporte</a>
            </div>
        </div>
    </section>

    <!-- Servicio: Internet -->
    <section id="internet" class="service-section">
        <div class="service-content">
            <div class="service-grid">
                <div class="service-text fade-in">
                    <h2 class="service-title">Internet Institucional</h2>
                    <p class="service-description">
                        Proveemos conectividad de alta velocidad a todos los
                        edificios del instituto y biblioteca, garantizando
                        acceso estable y confiable a recursos educativos en
                        línea para toda la comunidad.
                    </p>

                    <div class="stats">
                        <div class="stat-item fade-in">
                            <i class="fas fa-wifi"></i>
                            <h3>3 Gbps</h3>
                            <p>Velocidad de conexión</p>
                        </div>
                        <div class="stat-item fade-in">
                            <i class="fas fa-building"></i>
                            <h3>12</h3>
                            <p>Edificios conectados</p>
                        </div>
                        <div class="stat-item fade-in">
                            <i class="fas fa-users"></i>
                            <h3>3000+</h3>
                            <p>Usuarios simultáneos</p>
                        </div>
                        <div class="stat-item fade-in">
                            <i class="fas fa-network-wired"></i>
                            <h3>100%</h3>
                            <p>Cobertura en campus</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Beneficios Section -->
    <section class="benefits">
        <div class="section-title">
            <h2>Ventajas de Nuestros Servicios</h2>
            <p>Razones para confiar en nuestro departamento</p>
        </div>
        <div class="benefits-container">
            <div class="benefit-card">
                <i class="fas fa-shield-alt"></i>
                <h3>Seguridad Garantizada</h3>
                <p>
                    Protegemos toda la infraestructura tecnológica con los más
                    altos estándares de seguridad.
                </p>
            </div>
            <div class="benefit-card">
                <i class="fas fa-clock"></i>
                <h3>Disponibilidad</h3>
                <p>
                    Nuestros servicios se encuentra disponibles de acuerdo al
                    horario del Instituto
                </p>
            </div>
            <div class="benefit-card">
                <i class="fas fa-headset"></i>
                <h3>Soporte Especializado</h3>
                <p>
                    Contamos con personal calificado para brindar asistencia
                    técnica cuando la necesites.
                </p>
            </div>
            <div class="benefit-card">
                <i class="fas fa-rocket"></i>
                <h3>Alta Velocidad</h3>
                <p>
                    Disfruta de la mejor velocidad de conexión para tus
                    actividades académicas y administrativas.
                </p>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Variables - Scoped to this component mostly, but :root might leak if not careful. 
       Astro scopes normal selectors, but :root is global. 
       We will use a specific selector for the variables if possible or just rely on them being unique enough 
       or overwriting correctly.
       However, to be safe and follow Astro patterns, I'll put them in * selector or body, or just keep as :root 
       knowing it might affect others if they share names. 
       The names --primary, --secondary are very common. 
       I will rename them to --cc-primary, --cc-secondary etc to avoid conflicts.
    */
    :root {
        --cc-primary: #2c3e50;
        --cc-secondary: #3498db;
        --cc-accent: #e74c3c;
        --cc-light: #ecf0f1;
        --cc-dark: #2c3e50;
        --cc-success: #2ecc71;
        --cc-tertiary: #9b59b6; /* Added based on usage in #internet */
        --cc-transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    /* Reset specific for this page's elements if needed, but Layout handles global reset */

    /* Global Background for this page */
    :global(body) {
        background:
            linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
            url("Tuzas_Antigravity/images/Centro de Computo/CC_Portada.jpg")
                center/cover no-repeat fixed;
    }

    /* Typography overrides for this page */
    section {
        font-family: "Poppins", sans-serif;
        color: #333;
    }

    h1,
    h2,
    h3 {
        font-family: "Montserrat", sans-serif;
    }

    /* Hero Section */
    .hero {
        height: 100vh;
        /* background removed to show global background */
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        padding-top: 80px;
        position: relative;
        overflow: hidden;
    }

    .hero::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 50% 50%,
            rgba(52, 152, 219, 0.2) 0%,
            transparent 50%
        );
        animation: pulse 8s infinite alternate;
    }

    .hero-content {
        max-width: 800px;
        padding: 2rem;
        opacity: 0;
        transform: translateY(20px);
        position: relative;
        animation: fadeIn 1s ease-out forwards;
        z-index: 1;
    }

    .hero h1 {
        animation-delay: 0.5s;
        font-size: 3.5rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
    }

    .hero p {
        animation-delay: 0.8s;
        font-size: 1.2rem;
        margin-bottom: 2rem;
        color: white;
    }

    .hero .btn {
        animation-delay: 1.1s;
    }

    .btn {
        display: inline-block;
        padding: 0.8rem 2rem;
        background: var(--cc-secondary);
        color: white;
        border: none;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: var(--cc-transition);
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
    }

    .btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(52, 152, 219, 0.4);
        background: #2980b9;
    }

    /* Sección de Servicios Individuales */
    .service-section {
        min-height: 100vh;
        padding: 6rem 2rem;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
        /* background-attachment removed */
    }

    .service-content {
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
        position: relative;
        z-index: 2;
    }

    .service-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    .service-text {
        padding: 2.5rem;
        background-color: rgba(44, 62, 80, 0.25);
        border-radius: 15px;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
        transition: var(--cc-transition);
        color: white; /* Ensure text is visible on dark backgrounds */
    }

    .service-text:hover {
        background-color: rgba(44, 62, 80, 0.4);
        box-shadow: 0 12px 40px 0 rgba(0, 0, 0, 0.15);
    }

    .service-image {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        transform: perspective(1000px) rotateY(-10deg);
        transition: var(--cc-transition);
    }

    .service-image:hover {
        transform: perspective(1000px) rotateY(0);
    }

    .service-image img {
        width: 100%;
        height: auto;
        display: block;
        transition: var(--cc-transition);
    }

    .service-image:hover img {
        transform: scale(1.05);
    }

    .service-title {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        position: relative;
        color: white;
    }

    .service-title::after {
        content: "";
        display: block;
        width: 80px;
        height: 4px;
        background: var(--cc-secondary);
        margin-top: 1rem;
        border-radius: 2px;
    }

    .service-description {
        font-size: 1.1rem;
        margin-bottom: 2rem;
        line-height: 1.8;
        color: #f1f1f1;
    }

    .features-list {
        list-style: none;
        margin-top: 2rem;
    }

    .features-list li {
        margin-bottom: 1rem;
        display: flex;
        align-items: flex-start;
        gap: 0.8rem;
        transition: var(--cc-transition);
        color: #f1f1f1;
    }

    .features-list i {
        color: var(--cc-success);
        font-size: 1.2rem;
        width: 25px;
        text-align: center;
        margin-top: 4px;
        transition: var(--cc-transition);
    }

    .features-list li:hover {
        color: white;
    }

    .features-list li:hover i {
        transform: scale(1.25);
    }

    /* Individual Services Styles - REMOVED BACKGROUNDS */
    #correo {
        /* Transparent background */
    }

    #correo .service-title::after {
        background: #3498db;
    }

    #sii {
        /* Transparent background */
    }

    #sii .service-grid {
        direction: rtl;
    }

    #sii .service-text {
        direction: ltr;
    }

    #sii .service-title::after {
        background: #e74c3c;
    }

    #soporte {
        /* Transparent background */
    }

    #soporte .service-title::after {
        background: #2ecc71;
    }

    #internet {
        /* Transparent background */
        text-align: center;
    }

    #internet .service-grid {
        grid-template-columns: 1fr;
        text-align: center;
    }

    #internet .service-title::after {
        margin: 1rem auto;
        background: #9b59b6;
    }

    /* Stats */
    .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-top: 4rem;
    }

    .stat-item {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        transition: var(--cc-transition);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
    }

    .stat-item:hover {
        transform: translateY(-10px);
        background: rgba(255, 255, 255, 0.2);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    }

    .stat-item i {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--cc-light);
    }

    .stat-item h3 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        font-family: "Montserrat", sans-serif;
    }

    /* Benefits Section */
    .benefits {
        /* Transparent background */
        padding: 6rem 0;
    }

    .benefits-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding: 0 2rem;
    }

    .benefit-card {
        background: white;
        padding: 2.5rem;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: var(--cc-transition);
        text-align: center;
        opacity: 0;
        transform: translateY(50px);
    }

    .benefit-card.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .benefit-card:hover {
        transform: translateY(-10px) scale(1.03);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    }

    .benefit-card:hover i {
        transform: scale(1.1) rotate(-10deg);
        color: var(--cc-accent);
    }

    .benefit-card i {
        font-size: 3.5rem;
        color: var(--cc-secondary);
        margin-bottom: 1.5rem;
        transition: var(--cc-transition);
    }

    .benefit-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--cc-primary);
    }

    .benefit-card p {
        color: #333;
    }

    /* Buttons */
    .btn-outline {
        background: transparent;
        border: 2px solid var(--cc-secondary);
        color: var(--cc-secondary);
        margin-top: 1.5rem;
    }

    .btn-outline:hover {
        background: var(--cc-secondary);
        color: white;
    }

    .cta-buttons {
        margin-top: 1.5rem;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .btn-primary-alt {
        background: var(--cc-accent);
        border: 2px solid var(--cc-accent);
        color: white;
    }

    .btn-primary-alt:hover {
        background: #c0392b;
        border-color: #c0392b;
        color: white;
    }

    .btn-outline-alt {
        background: transparent;
        border: 2px solid var(--cc-accent);
        color: var(--cc-accent);
    }

    .btn-outline-alt:hover {
        background: var(--cc-accent);
        color: white;
    }

    /* Section Titles */
    .section-title {
        text-align: center;
        margin-bottom: 4rem;
        padding: 0 1rem;
    }

    .section-title h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 1rem;
        position: relative;
    }

    .section-title p {
        font-size: 1.2rem;
        color: white;
        max-width: 600px;
        margin: 0 auto;
    }

    .section-title h2::after {
        content: "";
        display: block;
        width: 80px;
        height: 4px;
        background: var(--cc-secondary);
        margin: 1rem auto 0;
        border-radius: 2px;
    }

    /* Scroll Down Indicator */
    .scroll-down-indicator {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        font-size: 1.5rem;
        text-decoration: none;
        opacity: 0.7;
        transition: var(--cc-transition);
        animation: bounce 2s infinite;
    }

    .scroll-down-indicator:hover {
        opacity: 1;
        transform: translateX(-50%) scale(1.1);
    }

    /* Animations */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
            opacity: 0.5;
        }
        50% {
            transform: scale(1.05);
            opacity: 0.8;
        }
        100% {
            transform: scale(1);
            opacity: 0.5;
        }
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateX(-50%) translateY(0);
        }
        40% {
            transform: translateX(-50%) translateY(-10px);
        }
        60% {
            transform: translateX(-50%) translateY(-5px);
        }
    }

    .fade-in {
        opacity: 0;
        transform: translateY(50px);
        transition:
            opacity 1s ease,
            transform 1s ease;
    }

    .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 968px) {
        .service-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        #sii .service-grid {
            direction: ltr;
        }

        .service-image {
            transform: none;
            order: -1;
        }

        .hero h1 {
            font-size: 2.5rem;
        }

        .service-title {
            font-size: 2rem;
        }
    }

    @media (max-width: 768px) {
        .stats {
            grid-template-columns: 1fr 1fr;
        }

        .service-section {
            background-attachment: scroll !important;
        }
    }

    @media (max-width: 480px) {
        .stats {
            grid-template-columns: 1fr;
        }

        .service-title {
            font-size: 1.8rem;
        }

        .service-text {
            padding: 1.5rem;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Animación de elementos al hacer scroll
        const fadeElements = document.querySelectorAll(
            ".fade-in, .benefit-card",
        );

        function checkFade() {
            fadeElements.forEach((element) => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;

                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add("visible");
                }
            });
        }

        // Verificar al cargar y al hacer scroll
        window.addEventListener("scroll", checkFade);
        checkFade();

        // Smooth scrolling para navegación
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
            anchor.addEventListener("click", function (e) {
                e.preventDefault();

                const targetId = this.getAttribute("href");
                if (targetId === null || targetId === "#") return;

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: (targetElement as HTMLElement).offsetTop - 100,
                        behavior: "smooth",
                    });
                }
            });
        });

        // Ajustar el padding de las secciones para dispositivos móviles
        function adjustMobilePadding() {
            if (window.innerWidth < 768) {
                const serviceSections =
                    document.querySelectorAll(".service-section");
                serviceSections.forEach((section) => {
                    (section as HTMLElement).style.padding = "4rem 1rem";
                });
            }
        }

        adjustMobilePadding();
        window.addEventListener("resize", adjustMobilePadding);
    });
</script>
