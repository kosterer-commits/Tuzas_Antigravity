    <script>
        /* â”€â”€ Particles â”€â”€ */
        (function () {
            const canvas = document.getElementById(
                "particle-canvas",
            ) as HTMLCanvasElement;
            if (!canvas) return;
            const ctx = canvas.getContext("2d")!;
            let W = (canvas.width = window.innerWidth);
            let H = (canvas.height = window.innerHeight);

            window.addEventListener("resize", () => {
                W = canvas.width = window.innerWidth;
                H = canvas.height = window.innerHeight;
            });

            const COLORS = [
                "#60a5fa",
                "#a78bfa",
                "#f472b6",
                "#34d399",
                "#fbbf24",
            ];
            interface Particle {
                x: number;
                y: number;
                vx: number;
                vy: number;
                r: number;
                color: string;
                alpha: number;
            }
            const particles: Particle[] = Array.from({ length: 80 }, () => ({
                x: Math.random() * W,
                y: Math.random() * H,
                vx: (Math.random() - 0.5) * 0.4,
                vy: (Math.random() - 0.5) * 0.4,
                r: Math.random() * 2 + 0.5,
                color: COLORS[Math.floor(Math.random() * COLORS.length)],
                alpha: Math.random() * 0.5 + 0.1,
            }));

            let mouse = { x: -9999, y: -9999 };
            window.addEventListener("mousemove", (e) => {
                mouse.x = e.clientX;
                mouse.y = e.clientY;
            });

            function draw() {
                ctx.clearRect(0, 0, W, H);
                particles.forEach((p) => {
                    // Mouse repulsion
                    const dx = p.x - mouse.x,
                        dy = p.y - mouse.y;
                    const dist = Math.sqrt(dx * dx + dy * dy);
                    if (dist < 120) {
                        p.vx += (dx / dist) * 0.05;
                        p.vy += (dy / dist) * 0.05;
                    }
                    p.vx *= 0.99;
                    p.vy *= 0.99;
                    p.x += p.vx;
                    p.y += p.vy;
                    if (p.x < 0) p.x = W;
                    if (p.x > W) p.x = 0;
                    if (p.y < 0) p.y = H;
                    if (p.y > H) p.y = 0;

                    // Draw particle
                    ctx.beginPath();
                    ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
                    ctx.fillStyle = p.color;
                    ctx.globalAlpha = p.alpha;
                    ctx.fill();
                });

                // Draw connections
                ctx.globalAlpha = 1;
                for (let i = 0; i < particles.length; i++) {
                    for (let j = i + 1; j < particles.length; j++) {
                        const dx = particles[i].x - particles[j].x;
                        const dy = particles[i].y - particles[j].y;
                        const d = Math.sqrt(dx * dx + dy * dy);
                        if (d < 100) {
                            ctx.beginPath();
                            ctx.moveTo(particles[i].x, particles[i].y);
                            ctx.lineTo(particles[j].x, particles[j].y);
                            ctx.strokeStyle = `rgba(96,165,250,${(1 - d / 100) * 0.12})`;
                            ctx.lineWidth = 0.8;
                            ctx.stroke();
                        }
                    }
                }
                requestAnimationFrame(draw);
            }
            draw();
        })();

        /* â”€â”€ Reveal on scroll â”€â”€ */
        const reveals = document.querySelectorAll(".reveal");
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((e) => {
                    if (e.isIntersecting) {
                        e.target.classList.add("in-view");
                        observer.unobserve(e.target);
                    }
                });
            },
            { threshold: 0.08 },
        );
        reveals.forEach((el) => observer.observe(el));

        /* â”€â”€ Form â”€â”€ */
        const form = document.getElementById("contact-form") as HTMLFormElement;
        const textarea = document.getElementById(
            "f-message",
        ) as HTMLTextAreaElement;
        const charCount = document.getElementById("char-count")!;
        const successMsg = document.getElementById(
            "success-msg",
        ) as HTMLElement;
        const submitBtn = document.getElementById(
            "submit-btn",
        ) as HTMLButtonElement;

        textarea?.addEventListener("input", () => {
            const len = textarea.value.length;
            charCount.textContent = `${len} / 500`;
            if (len > 500) textarea.value = textarea.value.slice(0, 500);
        });

        function validateField(
            el: HTMLInputElement | HTMLSelectElement | HTMLTextAreaElement,
            errId: string,
        ): boolean {
            const wrap = el.closest(".input-wrap") as HTMLElement;
            const err = document.getElementById(errId)!;
            if (!el.value.trim()) {
                wrap?.classList.add("has-error");
                err.textContent = "Este campo es obligatorio";
                return false;
            }
            if (
                el.type === "email" &&
                !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(el.value)
            ) {
                wrap?.classList.add("has-error");
                err.textContent = "Correo electrÃ³nico invÃ¡lido";
                return false;
            }
            wrap?.classList.remove("has-error");
            err.textContent = "";
            return true;
        }

        ["f-name", "f-email", "f-subject", "f-message"].forEach((id) => {
            const el = document.getElementById(id) as HTMLInputElement;
            el?.addEventListener("blur", () => {
                const errId = "err-" + id.replace("f-", "");
                validateField(el, errId);
            });
        });

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const name = document.getElementById("f-name") as HTMLInputElement;
            const email = document.getElementById(
                "f-email",
            ) as HTMLInputElement;
            const subject = document.getElementById(
                "f-subject",
            ) as HTMLSelectElement;
            const msg = document.getElementById(
                "f-message",
            ) as HTMLTextAreaElement;

            const valid = [
                validateField(name, "err-name"),
                validateField(email, "err-email"),
                validateField(subject, "err-subject"),
                validateField(msg, "err-message"),
            ].every(Boolean);

            if (!valid) return;

            // Simulate send
            const btnText = submitBtn.querySelector(".btn-text") as HTMLElement;
            const btnIcon = submitBtn.querySelector(".btn-icon") as HTMLElement;
            const btnLoader = submitBtn.querySelector(
                ".btn-loader",
            ) as HTMLElement;

            submitBtn.disabled = true;
            btnText.textContent = "Enviando...";
            btnIcon.hidden = true;
            btnLoader.hidden = false;

            await new Promise((r) => setTimeout(r, 1800));

            form.style.display = "none";
            successMsg.hidden = false;
        });
