        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .active-filter {
        background: var(--azul-itp);
        color: white;
        border-color: transparent;
        box-shadow: 0 5px 15px rgba(26, 82, 118, 0.3);
    }

    /* Badge En L√≠nea */
    [data-categoria="En L√≠nea"] .program-card::after {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
        height: 100%;
        border: 2px solid #0d9488;
        border-radius: 1rem;
        pointer-events: none;
        opacity: 0.5;
    }

    /* Scroll Reveal Animation */
    .reveal-on-scroll {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.5, 0, 0, 1);
    }

    .reveal-visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Staggered delays */
    .reveal-delay-0 {
        transition-delay: 0ms;
    }
    .reveal-delay-100 {
        transition-delay: 100ms;
    }
    .reveal-delay-200 {
        transition-delay: 200ms;
    }
    .reveal-delay-300 {
        transition-delay: 300ms;
    }
</style>

<script>
    // Filter functionality
    const filterBtns = document.querySelectorAll(".filter-btn");
    const programCards = document.querySelectorAll(".program-card");

    // Initialize first button as active
    if (filterBtns.length > 0) {
        filterBtns[0].classList.add("active-filter");
        filterBtns[0].classList.remove("bg-white", "text-gray-700");
    }

    filterBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            const categoria = btn.getAttribute("data-categoria");

            // Update active button
            filterBtns.forEach((b) => {
                b.classList.remove("active-filter");
                b.classList.add("bg-white", "text-gray-700");
            });
            btn.classList.remove("bg-white", "text-gray-700");
            btn.classList.add("active-filter");

            // Filter cards with Animation
            programCards.forEach((card) => {
                const cardCategoria = card.getAttribute("data-categoria");
                const htmlCard = card as HTMLElement;

                if (categoria === "Todas" || cardCategoria === categoria) {
                    htmlCard.style.display = "block";
                    // Small delay to allow display:block to render before opacity change
                    setTimeout(() => {
                        htmlCard.style.opacity = "1";
                        htmlCard.style.transform = "translateY(0) scale(1)";
                    }, 50);
                } else {
                    htmlCard.style.opacity = "0";
                    htmlCard.style.transform = "translateY(20px) scale(0.95)";
                    setTimeout(() => {
                        htmlCard.style.display = "none";
                    }, 300);
                }
            });
        });
    });

    // Intersection Observer for Scroll Animations
    const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("reveal-visible");
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document.querySelectorAll(".reveal-on-scroll").forEach((elem) => {
        observer.observe(elem);
    });
</script>
