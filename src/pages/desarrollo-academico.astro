        );
    });
    // Fallback in case DOMContentLoaded already fired (e.g. view transitions)
    if (
        document.readyState === "complete" ||
        document.readyState === "interactive"
    ) {
        lineamientos.forEach((doc) =>
            createDocumentCard(doc, "lineamientosGrid", basePath),
        );
        herramientas.forEach((doc) =>
            createDocumentCard(doc, "herramientasGrid", anexosPath),
        );
