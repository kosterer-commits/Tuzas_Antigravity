        }
        .reveal.in-view {
            opacity: 1;
            transform: translateY(0);
        }
    </style>

    <script>
        const reveals = document.querySelectorAll(".reveal");
        const io = new IntersectionObserver(
            (entries) => {
                entries.forEach((e) => {
                    if (e.isIntersecting) {
                        e.target.classList.add("in-view");
                        io.unobserve(e.target);
                    }
                });
            },
            { threshold: 0.07 },
        );
        reveals.forEach((el) => io.observe(el));
    </script>
