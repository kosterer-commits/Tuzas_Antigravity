---
import Layout from "../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
---

<Layout title="Departamento de Servicios Escolares">
    <!-- Contenido principal con fondo moderno -->
    <div class="container-fluid bg-modern-escolares py-20 px-4 md:px-8">
        <div class="max-w-7xl mx-auto">
            <!-- Encabezado principal mejorado -->
            <div class="text-center mb-12">
                <div class="header-badge mb-4 inline-block">
                    <span
                        class="badge badge-primary text-sm font-semibold tracking-wide px-4 py-2 rounded-full border border-blue-200 bg-white text-blue-600 shadow-sm"
                        >Servicios Académicos</span
                    >
                </div>
                <h1
                    class="text-4xl md:text-5xl font-bold mb-4 text-primary-dark font-montserrat"
                >
                    Departamento de Servicios Escolares
                </h1>
                <div
                    class="divider-header mx-auto my-4 w-20 h-1 rounded-full bg-gradient-brand"
                >
                </div>
                <p class="text-xl text-gray-600 font-light">
                    Brindamos apoyo integral para tu trayectoria académica
                </p>
            </div>

            <!-- Grid de dos columnas para las secciones -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Sección de Oficina de Servicios Estudiantiles -->
                <div
                    class="card bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1"
                >
                    <div
                        class="card-header bg-gradient-brand text-white py-4 px-6 relative"
                    >
                        <h2 class="text-xl font-bold flex items-center">
                            <i class="fas fa-user-graduate mr-3"></i>Oficina de
                            Servicios Estudiantiles
                        </h2>
                        <div class="corner-ribbon"></div>
                    </div>
                    <div class="card-body p-0">
                        <div class="divide-y divide-gray-100">
                            <!-- Items adaptados a Tailwind -->
                            <a
                                href={`${BASE}servicios-escolares/servicio-medico`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-red-100 text-red-500 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-red-200 transition-colors"
                                    >
                                        <i class="fas fa-heartbeat"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-blue-600 transition-colors"
                                        >
                                            Servicio Médico Institucional
                                        </h6>
                                        <small class="text-gray-500"
                                            >Atención médica para estudiantes</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-blue-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/seguro-facultativo`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-blue-100 text-blue-500 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors"
                                    >
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-blue-600 transition-colors"
                                        >
                                            Seguro Facultativo IMSS
                                        </h6>
                                        <small class="text-gray-500"
                                            >Cobertura médica extendida</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-blue-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/seguro-accidentes`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-yellow-100 text-yellow-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-yellow-200 transition-colors"
                                    >
                                        <i class="fas fa-ambulance"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-blue-600 transition-colors"
                                        >
                                            Seguro de Accidentes Escolares
                                        </h6>
                                        <small class="text-gray-500"
                                            >Protección durante actividades
                                            académicas</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-blue-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}pdf/escolares/1 doc ITPAC-AC-PO-008.pdf`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-green-100 text-green-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-green-200 transition-colors"
                                    >
                                        <i class="fas fa-project-diagram"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-blue-600 transition-colors"
                                        >
                                            Diagrama de Flujo
                                        </h6>
                                        <small class="text-gray-500"
                                            >Procedimiento de Acto de Recepción
                                            profesional</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-blue-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/acto_recepcional_licenciatura`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-blue-100 text-blue-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors"
                                    >
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-blue-600 transition-colors"
                                        >
                                            Requisitos para Acto Recepción
                                        </h6>
                                        <small class="text-gray-500"
                                            >Nivel Licenciatura</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-blue-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/acto_recepcional_maestria`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-blue-100 text-blue-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors"
                                    >
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-blue-600 transition-colors"
                                        >
                                            Requisitos para Acto Recepción
                                        </h6>
                                        <small class="text-gray-500"
                                            >Nivel Maestría</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-blue-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/acto_recepcional_doctorado`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-blue-100 text-blue-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors"
                                    >
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-blue-600 transition-colors"
                                        >
                                            Requisitos para Acto Recepción
                                        </h6>
                                        <small class="text-gray-500"
                                            >Nivel Doctorado</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-blue-500 transition-colors"
                                ></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Sección de Oficina de Control Escolar -->
                <div
                    class="card bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1"
                >
                    <div
                        class="card-header bg-gradient-success text-white py-4 px-6 relative"
                    >
                        <h2 class="text-xl font-bold flex items-center">
                            <i class="fas fa-clipboard-check mr-3"></i>Oficina
                            de Control Escolar
                        </h2>
                        <div class="corner-ribbon"></div>
                    </div>
                    <div class="card-body p-0">
                        <div class="divide-y divide-gray-100">
                            <a
                                href={`${BASE}servicios-escolares/catalogo_servicios`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-green-100 text-green-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-green-200 transition-colors"
                                    >
                                        <i class="fas fa-list-alt"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-green-600 transition-colors"
                                        >
                                            Catálogo de constancias
                                        </h6>
                                        <small class="text-gray-500"
                                            >Solicitud de constancias y
                                            credencial escolar</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/baja_temporal`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-yellow-100 text-yellow-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-yellow-200 transition-colors"
                                    >
                                        <i class="fas fa-pause-circle"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-green-600 transition-colors"
                                        >
                                            Baja Temporal
                                        </h6>
                                        <small class="text-gray-500"
                                            >Procedimiento para pausar estudios</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/duplicado`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-blue-100 text-blue-500 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors"
                                    >
                                        <i class="fas fa-copy"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-green-600 transition-colors"
                                        >
                                            Duplicado de Certificado
                                        </h6>
                                        <small class="text-gray-500"
                                            >Solicitud de documentos académicos</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/baja_definitiva_sc`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-red-100 text-red-500 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-red-200 transition-colors"
                                    >
                                        <i class="fas fa-times-circle"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-green-600 transition-colors"
                                        >
                                            Baja Definitiva
                                        </h6>
                                        <small class="text-gray-500"
                                            >Sin certificado parcial</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/baja_definitiva_cc`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-red-100 text-red-500 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-red-200 transition-colors"
                                    >
                                        <i class="fas fa-times-circle"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-green-600 transition-colors"
                                        >
                                            Baja Definitiva
                                        </h6>
                                        <small class="text-gray-500"
                                            >Con certificado parcial</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/certificado_gen_ant`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-blue-100 text-blue-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors"
                                    >
                                        <i class="fas fa-graduation-cap"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-green-600 transition-colors"
                                        >
                                            Certificado de Egreso
                                        </h6>
                                        <small class="text-gray-500"
                                            >Licenciatura</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/equivalencia_estudios`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-gray-100 text-gray-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-gray-200 transition-colors"
                                    >
                                        <i class="fas fa-exchange-alt"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-green-600 transition-colors"
                                        >
                                            Equivalencia de Estudios
                                        </h6>
                                        <small class="text-gray-500"
                                            >Trámite anual</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"
                                ></i>
                            </a>

                            <a
                                href={`${BASE}servicios-escolares/proximos_egresar`}
                                class="block p-4 hover:bg-gray-50 transition-colors flex items-center justify-between group"
                            >
                                <div class="flex items-center">
                                    <div
                                        class="icon-circle bg-green-100 text-green-600 w-10 h-10 rounded-full flex items-center justify-center mr-4 group-hover:bg-green-200 transition-colors"
                                    >
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                    <div>
                                        <h6
                                            class="font-semibold text-gray-800 mb-0 group-hover:text-green-600 transition-colors"
                                        >
                                            Próximos a Egresar
                                        </h6>
                                        <small class="text-gray-500"
                                            >Agosto - Diciembre 2024</small
                                        >
                                    </div>
                                </div>
                                <i
                                    class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"
                                ></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta de contacto mejorada -->
            <div class="mt-12 flex justify-center">
                <div
                    class="w-full max-w-3xl bg-white p-8 rounded-xl shadow-lg border-l-4 border-blue-600 relative overflow-hidden group"
                >
                    <!-- Background Pattern -->
                    <div
                        class="absolute inset-0 pattern-dots opacity-10 pointer-events-none"
                    >
                    </div>

                    <div
                        class="flex flex-col md:flex-row justify-between items-center relative z-10"
                    >
                        <div class="mb-6 md:mb-0 text-center md:text-left">
                            <h3 class="text-xl font-bold text-gray-800 mb-2">
                                ¿Necesitas más información?
                            </h3>
                            <p class="text-gray-600">
                                Estamos aquí para ayudarte en tu trayectoria
                                académica
                            </p>
                        </div>
                        <div class="text-center md:text-right space-y-2">
                            <p class="text-gray-700">
                                <i class="fas fa-phone-alt text-blue-600 mr-2"
                                ></i>
                                <strong>Teléfono:</strong> (771) 711 3073
                            </p>
                            <p class="text-gray-500 text-sm">Ext. 2011, 2012</p>
                            <p class="text-gray-700">
                                <i class="fas fa-clock text-blue-600 mr-2"></i>
                                <strong>Horario:</strong> 09:00 a 16:00 hrs.
                            </p>
                            <p
                                class="text-gray-700 group-hover:text-blue-700 transition-colors"
                            >
                                <i class="fas fa-envelope text-blue-600 mr-2"
                                ></i>
                                <a
                                    href="mailto:se_pachuca@tecnm.mx"
                                    class="hover:underline"
                                    ><strong>se_pachuca@tecnm.mx</strong></a
                                >
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    /* FontAwesome CDN is assumed to be in Layout or loaded here if needed, but adding link just in case */
    @import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css");

    .bg-modern-escolares {
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(5px);
        min-height: 100vh;
    }

    :global(body) {
        background:
            linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),
            url("/images/Servicios Escolares/Escolares_Portada.jpg")
                center/cover no-repeat fixed;
    }

    .font-montserrat {
        font-family: "Montserrat", sans-serif;
    }

    .text-primary-dark {
        color: #004a99;
    }

    .bg-gradient-brand {
        background: linear-gradient(to right, #1a237e, #0d47a1);
    }

    .bg-gradient-success {
        background: linear-gradient(to right, #1b5e20, #2e7d32);
    }

    .pattern-dots {
        background-image: radial-gradient(#0d47a1 1px, transparent 1px);
        background-size: 20px 20px;
    }

    /* Corner Ribbon Effect */
    .corner-ribbon {
        position: absolute;
        top: 0;
        right: 0;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 50px 50px 0;
        border-color: transparent rgba(255, 255, 255, 0.1) transparent
            transparent;
    }
</style>
