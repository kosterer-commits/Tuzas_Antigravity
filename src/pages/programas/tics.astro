<style>
    :root {
        --bg-color: #0a0a0a;
        --text-color: #f0f0f0;
        /* Cyber Mint IT Theme */
        --accent-gold: #04eb8d; /* Neon Mint */
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(4, 235, 141, 0.3);
        --card-hover: rgba(4, 235, 141, 0.08);
    }

    /* Typography */
    h1,
    h2,
    h3,
    .btn-gold {
        font-family: "Montserrat", sans-serif;
    }
    .section-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-size: 2.5rem;
        color: var(--accent-gold);
        text-align: center;
        margin-bottom: 60px;
        text-shadow: 0 0 20px rgba(4, 235, 141, 0.4);
        position: relative;
        display: inline-block;
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-gold);
        margin: 15px auto 0;
        box-shadow: 0 0 10px var(--accent-gold);
    }

    .main-title {
        font-family: "Orbitron", sans-serif;
    }

    /* Hero */
    .hero-subtitle {
        font-size: 1.2rem;
        letter-spacing: 5px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        margin-top: 30px;
        position: relative;
        display: inline-block;
    }
    .hero-subtitle::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--accent-gold),
            transparent
        );
    }

    /* Animated SVG Title */
    h1.main-title {
        perspective: 1200px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    h1.main-title span {
        display: inline-flex;
        width: clamp(30px, 8vw, 80px);
        height: clamp(30px, 8vw, 80px);
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.2s ease-out;
        cursor: pointer;
        animation-duration: 2s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
        margin: 0 5px;
        filter: drop-shadow(0 0 10px rgba(4, 235, 141, 0.5));
    }

    h1.main-title span:hover {
        transform: scale(1.15) translateZ(50px) translateY(-5px);
        z-index: 10;
        filter: drop-shadow(0 0 30px rgba(4, 235, 141, 1));
    }

    h1.main-title svg {
        width: 100%;
        height: 100%;
        filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.5));
    }

    h1.main-title span:hover svg .main-stroke {
        stroke: var(--accent-gold);
    }
    h1.main-title span:hover svg .fill-part {
        fill: var(--accent-gold);
    }
    h1.main-title span:hover svg .circuit {
        stroke: var(--accent-gold);
    }

    @keyframes disappearleft {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    @keyframes disappearight {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(-50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    h1.main-title span:nth-child(odd) {
        animation-name: disappearleft;
    }
    h1.main-title span:nth-child(even) {
        animation-name: disappearight;
    }

    h1.main-title span:nth-child(1) {
        animation-delay: 0.1s;
    }
    h1.main-title span:nth-child(2) {
        animation-delay: 0.2s;
    }
    h1.main-title span:nth-child(3) {
        animation-delay: 0.3s;
    }
    h1.main-title span:nth-child(4) {
        animation-delay: 0.4s;
    }
    h1.main-title span:nth-child(5) {
        animation-delay: 0.5s;
    }
    h1.main-title span:nth-child(6) {
        animation-delay: 0.6s;
    }

    /* Background & Canvas */
    .background-wrapper {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
    }
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Unsplash fallback for Data Center / Tech */
        background-image: url("https://images.unsplash.com/photo-1558494949-ef010cbdcc31?q=80&w=2034&auto=format&fit=crop");
        background-size: cover;
        background-position: center;
        opacity: 0.2;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            #0a0a0a 0%,
            rgba(10, 10, 10, 0.9) 100%
        );
    }
    #network-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Cards */
    .glass-card {
        background: linear-gradient(
            145deg,
            rgba(255, 255, 255, 0.05) 0%,
            rgba(255, 255, 255, 0.01) 100%
        );
