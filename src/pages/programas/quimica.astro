<style>
    :root {
        --bg-color: #0a0a0a;
        --text-color: #f0f0f0;
        /* Chemical Cyan Theme */
        --accent-gold: #00ceff;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(0, 206, 255, 0.2);
        --card-hover: rgba(0, 206, 255, 0.08);
    }

    /* Typography */
    h1,
    h2,
    h3,
    .btn-gold {
        font-family: "Montserrat", sans-serif;
    }
    .section-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-size: 2.5rem;
        color: var(--accent-gold);
        text-align: center;
        margin-bottom: 60px;
        text-shadow: 0 0 20px rgba(0, 206, 255, 0.4);
        position: relative;
        display: inline-block;
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-gold);
        margin: 15px auto 0;
        box-shadow: 0 0 10px var(--accent-gold);
    }

    .main-title {
        font-family: "Orbitron", sans-serif;
    }

    /* Hero */
    .hero-subtitle {
        font-size: 1.2rem;
        letter-spacing: 5px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        margin-top: 30px;
        position: relative;
        display: inline-block;
    }
    .hero-subtitle::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--accent-gold),
            transparent
        );
    }

    /* Animated SVG Title */
    h1.main-title {
        perspective: 1200px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    h1.main-title span {
        display: inline-flex;
        width: clamp(30px, 8vw, 90px);
        height: clamp(30px, 8vw, 90px);
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.2s ease-out;
        cursor: pointer;
        animation-duration: 2s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
    }

    h1.main-title span:hover {
        transform: scale(1.15) translateZ(50px) translateY(-5px);
        z-index: 10;
        filter: drop-shadow(0 0 30px rgba(0, 206, 255, 1));
    }

    h1.main-title svg {
        width: 100%;
        height: 100%;
        filter: drop-shadow(0 0 20px rgba(0, 206, 255, 0.6));
    }

    @keyframes disappearleft {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    @keyframes disappearight {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(-50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    h1.main-title span:nth-child(odd) {
        animation-name: disappearleft;
    }
    h1.main-title span:nth-child(even) {
        animation-name: disappearight;
    }

    h1.main-title span:nth-child(1) {
        animation-delay: 0.1s;
    }
    h1.main-title span:nth-child(2) {
        animation-delay: 0.2s;
    }
    h1.main-title span:nth-child(3) {
        animation-delay: 0.3s;
    }
    h1.main-title span:nth-child(4) {
        animation-delay: 0.4s;
    }
    h1.main-title span:nth-child(5) {
        animation-delay: 0.5s;
    }
    h1.main-title span:nth-child(6) {
        animation-delay: 0.6s;
    }
    h1.main-title span:nth-child(7) {
        animation-delay: 0.7s;
    }

    /* Background & Canvas */
    .background-wrapper {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
    }
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Unsplash fallback for Chemistry/Science */
        background-image: url("https://images.unsplash.com/photo-1532094349884-543bc11b234d?q=80&w=2070&auto=format&fit=crop");
        background-size: cover;
        background-position: center;
        opacity: 0.3;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            #0a0a0a 0%,
            rgba(10, 10, 10, 0.8) 100%
        );
    }
    #chemical-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Cards */
    .glass-card {
        background: linear-gradient(
            145deg,
            rgba(255, 255, 255, 0.05) 0%,
            rgba(255, 255, 255, 0.01) 100%
        );
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-top: 1px solid rgba(0, 206, 255, 0.3);
        border-bottom: 1px solid rgba(0, 206, 255, 0.1);
        padding: 50px;
        border-radius: 16px;
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
        text-align: center;
    }
    .glass-card::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 0% 0%,
            rgba(0, 206, 255, 0.05),
            transparent 40%
        );
        pointer-events: none;
    }
    .objective-text {
        font-size: 1.35rem;
        text-align: justify;
        font-weight: 300;
        color: #e0e0e0;
        line-height: 1.9;
        position: relative;
        z-index: 1;
    }

    /* Profile Grid */
    .profile-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 25px;
    }
    .profile-card {
        background: rgba(20, 20, 20, 0.6);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-left: 3px solid var(--accent-gold);
        padding: 25px 30px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        border-radius: 4px; /* More angular for "science" feel */
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: flex-start;
        gap: 15px;
    }
    .profile-card:hover {
        transform: translateY(-5px);
        background: rgba(0, 206, 255, 0.08);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }
    .check-icon {
        width: 24px;
        height: 24px;
        min-width: 24px;
        color: var(--accent-gold);
        filter: drop-shadow(0 0 5px rgba(0, 206, 255, 0.6));
    }
    .profile-card p {
        font-size: 1rem;
        font-weight: 400;
        color: #d1d5db;
        line-height: 1.6;
        margin: 0;
        position: relative;
        z-index: 1;
    }
    .profile-card::before {
        content: '"';
        position: absolute;
        top: 10px;
        right: 20px;
        font-family: "Cormorant Garamond", serif;
        font-size: 5rem;
        color: rgba(0, 206, 255, 0.1);
        line-height: 1;
        pointer-events: none;
    }

    /* CTA Button */
    .cta-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        text-align: center;
    }
    .btn-gold {
        display: inline-block;
        padding: 20px 50px;
        background: transparent;
        color: var(--accent-gold);
        border: 1px solid var(--accent-gold);
        text-decoration: none;
        font-weight: 600;
        letter-spacing: 3px;
        text-transform: uppercase;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        z-index: 10;
    }
    .btn-gold:hover {
        color: #000;
        background: var(--accent-gold);
        box-shadow: 0 0 20px var(--accent-gold);
    }

    /* Video */
    .video-container {
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 20px 80px rgba(0, 0, 0, 0.8);
        border: 1px solid var(--glass-border);
    }

    /* Interactive Elements */
    .quantum-aura {
        position: fixed;
        width: 400px;
        height: 400px;
        background: radial-gradient(
            circle,
            var(--accent-gold) 0%,
            transparent 70%
        );
        border-radius: 50%;
        pointer-events: none;
        z-index: 1;
        mix-blend-mode: screen;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.5s ease;
        filter: opacity(0.15);
    }
    .cursor-singularity {
        position: fixed;
        width: 10px;
        height: 10px;
        background: #fff;
        border-radius: 50%;
        box-shadow:
            0 0 20px var(--accent-gold),
            0 0 40px var(--accent-gold);
        pointer-events: none;
        z-index: 50;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.3s;
    }

    /* Layout Adjustments */
    main {
        padding-top: 120px !important;
