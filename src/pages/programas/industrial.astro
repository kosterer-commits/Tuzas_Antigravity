---
import Layout from "../../layouts/Layout.astro";

const competencies = [
    "Diseña, implementa, administra y mejora sistemas integrados de abastecimiento, producción y distribución de organizaciones productoras de bienes y servicios, de forma sustentable y considerando las normas nacionales e internacionales.",
    "Conoce la estructura y funcionamiento básico para operar la maquinaria, herramientas, equipos e instrumentos de medición y control convencionales y de vanguardia.",
    "Participa en proyectos de transferencia, asimilación, desarrollo y adaptación de tecnologías.",
    "Integra, dirige y mantiene equipos de trabajo inter y multidisciplinarios en ambientes cambiantes y multiculturales.",
    "Diseña, implementa y administra sistemas de mantenimiento.",
    "Planea y diseña la localización y distribución de instalaciones para la producción de bienes y servicios.",
    "Selecciona, instala y pone en marcha maquinaria y equipo.",
    "Diseña, implementa y mejora los sistemas de trabajo aplicando la ergonomía.",
    "Integra y administra sistemas de higiene, seguridad industrial y protección al medio ambiente con conciencia e identidad social.",
    "Formula, evalúa y administra proyectos de inversión.",
    "Desarrolla actitudes emprendedoras, creativas, de superación personal y de liderazgo en su entorno social",
    "Actúa con sentido ético en su entorno laboral y social.",
    "Utiliza las tecnologías y sistemas de información de manera eficiente.",
    "Utiliza técnicas y métodos cualitativos y cuantitativos para la toma de decisiones.",
];
---

<Layout title="Ingeniería Industrial - TecNM Pachuca">
    <!-- Font Imports -->
    <link
        href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600;700&family=Montserrat:wght@200;300;400;500;600;700;800;900&family=Orbitron:wght@400..900&display=swap"
        rel="stylesheet"
    />

    <main class="text-white min-h-screen relative overflow-x-hidden">
        <!-- Background Elements -->
        <div class="background-wrapper">
            <div class="background-image"></div>
            <div class="overlay"></div>
            <canvas id="industrial-canvas"></canvas>
            <div class="quantum-aura"></div>
            <div class="cursor-singularity"></div>
        </div>

        <!-- Hero Section -->
        <section
            class="min-h-screen flex flex-col justify-center items-center relative z-10 px-4 pt-32 pb-20"
        >
            <div class="text-center w-full max-w-7xl mx-auto">
                <h1 class="main-title" id="parallax-title">
                    <!-- I - Hydraulic Cylinder -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <rect
                                x="35"
                                y="20"
                                width="30"
                                height="40"
                                class="mechanism-fill"
                                stroke="#fff"
                                stroke-width="2"></rect>
                            <!-- Barrel -->
                            <rect
                                x="42"
                                y="60"
                                width="16"
                                height="30"
                                fill="#fff"></rect>
                            <!-- Rod -->
                            <rect
                                x="30"
                                y="85"
                                width="40"
                                height="5"
                                fill="#fff"></rect>
                            <!-- Base -->
                            <line
                                x1="50"
                                y1="20"
                                x2="50"
                                y2="90"
                                stroke="#ff8800"
                                stroke-width="1"
                                stroke-dasharray="2,2"></line>
                        </svg>
                    </span>

                    <!-- N - Crane -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <rect
                                x="20"
                                y="20"
                                width="10"
                                height="60"
                                fill="#fff"></rect>
                            <rect
                                x="70"
                                y="20"
                                width="10"
                                height="60"
                                fill="#fff"></rect>
                            <line
                                x1="20"
                                y1="20"
                                x2="70"
                                y2="80"
                                stroke="#ff8800"
                                stroke-width="5"></line>
                        </svg>
                    </span>

                    <!-- D - D-Clamp -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <path
                                d="M30,20 H50 A30,30 0 0,1 50,80 H30 V20 Z"
                                stroke="#fff"
                                stroke-width="8"
                                fill="none"></path>
                            <rect
                                x="25"
                                y="15"
                                width="10"
                                height="70"
                                fill="#fff"></rect>
                            <line
                                x1="35"
                                y1="50"
                                x2="65"
                                y2="50"
                                stroke="#ff8800"
                                stroke-width="2"
                                stroke-dasharray="2,2"></line>
                        </svg>
                    </span>

                    <!-- U - U-Pipe -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <path
                                d="M25,20 V60 A25,25 0 0,0 75,60 V20"
                                stroke="#fff"
                                stroke-width="8"
                                fill="none"
                                stroke-linecap="round"></path>
                            <path
                                d="M25,20 V60 A25,25 0 0,0 75,60 V20"
                                stroke="#ff8800"
                                stroke-width="2"
                                fill="none"
                                class="industrial-detail"></path>
                        </svg>
                    </span>

                    <!-- S - Safety Pipe-work -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <!-- Main 'S' Pipe -->
                            <path
                                d="M75,25 C55,5 25,25 25,50 C25,75 55,54 75,75 C95,95 45,95 25,80"
                                stroke="#fff"
                                stroke-width="8"
                                fill="none"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>

                            <!-- Inner detail / joints -->
                            <path
                                d="M75,25 C55,5 25,25 25,50 C25,75 55,54 75,75 C95,95 45,95 25,80"
                                class="industrial-detail"
                                stroke-width="2"
                                stroke-dasharray="0, 15"
                                stroke-linecap="round"
                                fill="none"></path>

                            <!-- Flanges/Couplings -->
                            <circle cx="25" cy="50" r="5" fill="#fff"></circle>
                            <circle cx="75" cy="75" r="5" fill="#fff"></circle>
                        </svg>
                    </span>

                    <!-- T - T-Square -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <rect
                                x="45"
                                y="20"
                                width="10"
                                height="70"
                                fill="#fff"></rect>
                            <rect
                                x="15"
                                y="20"
                                width="70"
                                height="15"
                                fill="#fff"></rect>
                            <line
                                x1="25"
                                y1="27"
                                x2="75"
                                y2="27"
                                stroke="#ff8800"
                                stroke-width="2"></line>
                            <line
                                x1="50"
                                y1="35"
                                x2="50"
                                y2="85"
                                stroke="#ff8800"
                                stroke-width="1"></line>
                        </svg>
                    </span>

                    <!-- R - Gears -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <rect
                                x="25"
                                y="20"
                                width="10"
                                height="60"
                                fill="#fff"></rect>
                            <path
                                d="M35,20 H60 A15,15 0 0,1 60,50 H35"
                                stroke="#fff"
                                stroke-width="8"
                                fill="none"></path>
                            <line
                                x1="35"
                                y1="50"
                                x2="65"
                                y2="80"
                                stroke="#fff"
                                stroke-width="8"
                                stroke-linecap="round"></line>
                            <circle
                                cx="45"
                                cy="35"
                                r="8"
                                stroke="#ff8800"
                                stroke-width="2"
                                fill="none"></circle>
                        </svg>
                    </span>

                    <!-- I - Screw -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <rect
                                x="42"
                                y="30"
                                width="16"
                                height="50"
                                fill="#fff"></rect>
                            <!-- Body -->
                            <path
                                d="M42,35 L58,40 M42,45 L58,50 M42,55 L58,60 M42,65 L58,70"
                                stroke="#ff8800"
                                stroke-width="2"></path>
                            <!-- Threads -->
                            <polygon
                                points="35,30 65,30 60,20 40,20"
                                fill="#fff"></polygon>
                            <!-- Head -->
                        </svg>
                    </span>

                    <!-- A - Safety Cone -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <polygon points="50,20 25,80 75,80" fill="#fff"
                            ></polygon>
                            <rect
                                x="20"
                                y="80"
                                width="60"
                                height="5"
                                fill="#fff"></rect>
                            <polygon
                                points="50,20 25,80 75,80"
                                fill="none"
                                stroke="#ff8800"
                                stroke-width="4"
                                stroke-dasharray="10,10"></polygon>
                        </svg>
                    </span>

                    <!-- L - L-Square -->
                    <span>
                        <svg viewBox="0 0 100 100">
                            <polyline
                                points="30,20 30,80 80,80"
                                stroke="#fff"
                                stroke-width="12"
                                fill="none"
                                stroke-linecap="square"></polyline>
                            <line
                                x1="30"
                                y1="30"
                                x2="35"
                                y2="30"
                                stroke="#ff8800"
                                stroke-width="2"></line>
                            <line
                                x1="30"
                                y1="40"
                                x2="35"
                                y2="40"
                                stroke="#ff8800"
                                stroke-width="2"></line>
                            <line
                                x1="30"
                                y1="50"
                                x2="35"
                                y2="50"
                                stroke="#ff8800"
                                stroke-width="2"></line>
                            <line
                                x1="40"
                                y1="80"
                                x2="40"
                                y2="75"
                                stroke="#ff8800"
                                stroke-width="2"></line>
                            <line
                                x1="50"
                                y1="80"
                                x2="50"
                                y2="75"
                                stroke="#ff8800"
                                stroke-width="2"></line>
                            <line
                                x1="60"
                                y1="80"
                                x2="60"
                                y2="75"
                                stroke="#ff8800"
                                stroke-width="2"></line>
                        </svg>
                    </span>
                </h1>
                <div class="hero-subtitle">
                    Organización · Producción · Rentabilidad
                </div>
            </div>
        </section>

        <!-- Objetivo General -->
        <section
            class="glass-card mb-16 transform hover:scale-[1.01] transition-all duration-500 max-w-5xl mx-auto"
        >
            <h2 class="section-title">Objetivo General</h2>
            <p class="objective-text">
                Formar profesionales que contribuyan al desarrollo sustentable,
                con una visión sistémica, que responda a los retos que presentan
                los constantes cambios, en los sistemas de producción de bienes
                y servicios en el entorno global,<span
                    class="text-orange-400 font-semibold"
                >
                    con ética y comprometidos con la sociedad.</span
                >
            </p>
        </section>

        <!-- Perfil Profesional -->
        <section class="mb-20 text-center">
            <h2 class="section-title">Perfil Profesional</h2>
            <div class="profile-grid text-left">
                {
                    competencies.map((item, index) => (
                        <div class="profile-card reveal-on-scroll">
                            <svg
                                class="check-icon"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="20 6 9 17 4 12" />
                            </svg>
                            <p>{item}</p>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Video Section -->
        <section class="mb-20">
            <div class="video-container">
                <div style="padding:56.25% 0 0 0;position:relative;">
                    <iframe
                        style="position:absolute;top:0;left:0;width:100%;height:100%;"
                        src="https://www.youtube.com/embed/7I6WFisZFlE"
                        title="Video Promocional Ingeniería Industrial"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                    >
                    </iframe>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-container">
            <a href="#" class="btn-gold"> Descargar Retícula &rarr; </a>
            <p class="mt-4 text-xs text-gray-500 w-full">
                *Enlace pendiente de actualización
            </p>
        </section>
    </main>
</Layout>

<style>
    :root {
        --bg-color: #0a0a0a;
        --text-color: #f0f0f0;
        /* Industrial Orange Theme */
        --accent-gold: #ff8800; /* Deep Orange */
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 136, 0, 0.2);
        --card-hover: rgba(255, 136, 0, 0.08);
    }

    /* Typography */
    h1,
    h2,
    h3,
    .btn-gold {
        font-family: "Montserrat", sans-serif;
    }
    .section-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-size: 2.5rem;
        color: var(--accent-gold);
        text-align: center;
        margin-bottom: 60px;
        text-shadow: 0 0 20px rgba(255, 136, 0, 0.4);
        position: relative;
        display: inline-block;
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-gold);
        margin: 15px auto 0;
        box-shadow: 0 0 10px var(--accent-gold);
    }

    .main-title {
        font-family: "Orbitron", sans-serif;
    }

    /* Hero */
    .hero-subtitle {
        font-size: 1.2rem;
        letter-spacing: 5px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        margin-top: 30px;
        position: relative;
        display: inline-block;
    }
    .hero-subtitle::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--accent-gold),
            transparent
        );
    }

    /* Animated SVG Title */
    h1.main-title {
        perspective: 1200px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    h1.main-title span {
        display: inline-flex;
        width: clamp(30px, 8vw, 90px);
        height: clamp(30px, 8vw, 90px);
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.2s ease-out;
        cursor: pointer;
        animation-duration: 2s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
    }

    h1.main-title span:hover {
        transform: scale(1.15) translateZ(50px) translateY(-5px);
        z-index: 10;
        filter: drop-shadow(0 0 30px rgba(255, 136, 0, 1));
    }

    h1.main-title svg {
        width: 100%;
        height: 100%;
        filter: drop-shadow(0 0 20px rgba(255, 136, 0, 0.6));
    }

    .industrial-detail {
        fill: none;
        stroke: var(--accent-gold);
        stroke-width: 2;
    }
    .mechanism-fill {
        fill: rgba(255, 136, 0, 0.2);
    }

    @keyframes disappearleft {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    @keyframes disappearight {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(-50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    h1.main-title span:nth-child(odd) {
        animation-name: disappearleft;
    }
    h1.main-title span:nth-child(even) {
        animation-name: disappearight;
    }

    h1.main-title span:nth-child(1) {
        animation-delay: 0.1s;
    }
    h1.main-title span:nth-child(2) {
        animation-delay: 0.2s;
    }
    h1.main-title span:nth-child(3) {
        animation-delay: 0.3s;
    }
    h1.main-title span:nth-child(4) {
        animation-delay: 0.4s;
    }
    h1.main-title span:nth-child(5) {
        animation-delay: 0.5s;
    }
    h1.main-title span:nth-child(6) {
        animation-delay: 0.6s;
    }
    h1.main-title span:nth-child(7) {
        animation-delay: 0.7s;
    }
    h1.main-title span:nth-child(8) {
        animation-delay: 0.8s;
    }
    h1.main-title span:nth-child(9) {
        animation-delay: 0.9s;
    }
    h1.main-title span:nth-child(10) {
        animation-delay: 1s;
    }

    /* Background & Canvas */
    .background-wrapper {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
    }
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Unsplash fallback for Industry */
        background-image: url("https://images.unsplash.com/photo-1565153907400-7e01a9abca2f?q=80&w=2070&auto=format&fit=crop");
        background-size: cover;
        background-position: center;
        opacity: 0.3;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            #0a0a0a 0%,
            rgba(10, 10, 10, 0.8) 100%
        );
    }
    #industrial-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Cards */
    .glass-card {
        background: linear-gradient(
            145deg,
            rgba(255, 255, 255, 0.05) 0%,
            rgba(255, 255, 255, 0.01) 100%
        );
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-top: 1px solid rgba(255, 136, 0, 0.3);
        border-bottom: 1px solid rgba(255, 136, 0, 0.1);
        padding: 50px;
        border-radius: 16px;
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
        text-align: center;
    }
    .glass-card::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 0% 0%,
            rgba(255, 136, 0, 0.05),
            transparent 40%
        );
        pointer-events: none;
    }
    .objective-text {
        font-size: 1.35rem;
        text-align: justify;
        font-weight: 300;
        color: #e0e0e0;
        line-height: 1.9;
        position: relative;
        z-index: 1;
    }

    /* Profile Grid */
    .profile-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 25px;
    }
    .profile-card {
        background: rgba(20, 20, 20, 0.6);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-left: 3px solid var(--accent-gold);
        padding: 25px 30px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        border-radius: 4px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: flex-start;
        gap: 15px;
    }
    .profile-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 136, 0, 0.08);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }
    .check-icon {
        width: 24px;
        height: 24px;
        min-width: 24px;
        color: var(--accent-gold);
        filter: drop-shadow(0 0 5px rgba(255, 136, 0, 0.6));
    }
    .profile-card p {
        font-size: 1rem;
        font-weight: 400;
        color: #d1d5db;
        line-height: 1.6;
        margin: 0;
        position: relative;
        z-index: 1;
    }
    .profile-card::before {
        content: '"';
        position: absolute;
        top: 10px;
        right: 20px;
        font-family: "Cormorant Garamond", serif;
        font-size: 5rem;
        color: rgba(255, 136, 0, 0.1);
        line-height: 1;
        pointer-events: none;
    }

    /* CTA Button */
    .cta-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        text-align: center;
    }
    .btn-gold {
        display: inline-block;
        padding: 20px 50px;
        background: transparent;
        color: var(--accent-gold);
        border: 1px solid var(--accent-gold);
        text-decoration: none;
        font-weight: 600;
        letter-spacing: 3px;
        text-transform: uppercase;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        z-index: 10;
    }
    .btn-gold:hover {
        color: #000;
        background: var(--accent-gold);
        box-shadow: 0 0 20px var(--accent-gold);
    }

    /* Video */
    .video-container {
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 20px 80px rgba(0, 0, 0, 0.8);
        border: 1px solid var(--glass-border);
    }

    /* Interactive Elements */
    .quantum-aura {
        position: fixed;
        width: 400px;
        height: 400px;
        background: radial-gradient(
            circle,
            var(--accent-gold) 0%,
            transparent 70%
        );
        border-radius: 50%;
        pointer-events: none;
        z-index: 1;
        mix-blend-mode: screen;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.5s ease;
        filter: opacity(0.15);
    }
    .cursor-singularity {
        position: fixed;
        width: 10px;
        height: 10px;
        background: #fff;
        border-radius: 50%;
        box-shadow:
            0 0 20px var(--accent-gold),
            0 0 40px var(--accent-gold);
        pointer-events: none;
        z-index: 50;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.3s;
    }

    /* Layout Adjustments */
    main {
        padding-top: 120px !important;
    }

    /* Footer Override */
    :global(footer) {
        position: relative;
        z-index: 10;
        background: rgba(10, 10, 10, 0.95) !important;
        backdrop-filter: blur(20px);
        border-top: 1px solid rgba(255, 136, 0, 0.2);
    }
</style>

<script>
    const canvas = document.getElementById(
        "industrial-canvas",
    ) as HTMLCanvasElement;
    if (canvas) {
        const ctx = canvas.getContext("2d");
        const aura = document.querySelector(".quantum-aura") as HTMLElement;
        const cursor = document.querySelector(
            ".cursor-singularity",
        ) as HTMLElement;

        const resize = () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        };
        window.addEventListener("resize", resize);
        resize();

        // Industrial Particles / Singularity Orange Hybrid
        const stars: {
            x: number;
            y: number;
            size: number;
            vx: number;
            vy: number;
        }[] = [];
        const starCount = 100;
        const connectionDistance = 150;
        const accentColor = "#ff8800"; // Deep Orange

        for (let i = 0; i < starCount; i++) {
            stars.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                size: Math.random() * 2,
                vx: (Math.random() - 0.5) * 0.5,
                vy: (Math.random() - 0.5) * 0.5,
            });
        }

        let mouse = { x: -1000, y: -1000 };

        document.addEventListener("mousemove", (e) => {
            mouse.x = e.clientX;
            mouse.y = e.clientY;

            if (aura) {
                aura.style.opacity = "1";
                aura.style.left = mouse.x + "px";
                aura.style.top = mouse.y + "px";
            }
            if (cursor) {
                cursor.style.opacity = "1";
                cursor.style.left = mouse.x + "px";
                cursor.style.top = mouse.y + "px";
            }
        });

        const animate = () => {
            if (!ctx) return;
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            stars.forEach((star) => {
                star.x += star.vx;
                star.y += star.vy;

                if (star.x < 0 || star.x > canvas.width) star.vx *= -1;
                if (star.y < 0 || star.y > canvas.height) star.vy *= -1;

                ctx.fillStyle = accentColor;
                ctx.globalAlpha = 0.5;
                ctx.beginPath();
                ctx.arc(star.x, star.y, star.size, 0, Math.PI * 2);
                ctx.fill();

                const dist = Math.hypot(star.x - mouse.x, star.y - mouse.y);
                if (dist < connectionDistance) {
                    ctx.strokeStyle = accentColor;
                    ctx.globalAlpha = (1 - dist / connectionDistance) * 0.6;
                    ctx.lineWidth = 0.5;
                    ctx.beginPath();
                    ctx.moveTo(star.x, star.y);
                    ctx.lineTo(mouse.x, mouse.y);
                    ctx.stroke();
                }
            });
            requestAnimationFrame(animate);
        };
        animate();
    }
</script>
