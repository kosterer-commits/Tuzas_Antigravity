<style>
    :root {
        --bg-color: #0a0a0a;
        --text-color: #f0f0f0;
        /* Management Magenta Theme */
        --accent-gold: #ff0080; /* Magenta */
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 0, 128, 0.4);
        --card-hover: rgba(255, 0, 128, 0.08);
    }

    /* Typography */
    h1,
    h2,
    h3,
    .btn-gold {
        font-family: "Montserrat", sans-serif;
    }
    .section-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-size: 2.5rem;
        color: var(--accent-gold);
        text-align: center;
        margin-bottom: 60px;
        text-shadow: 0 0 20px rgba(255, 0, 128, 0.4);
        position: relative;
        display: inline-block;
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-gold);
        margin: 15px auto 0;
        box-shadow: 0 0 10px var(--accent-gold);
    }

    .main-title {
        font-family: "Orbitron", sans-serif;
        flex-direction: column; /* Stack rows */
    }

    /* Hero */
    .hero-subtitle {
        font-size: 1.2rem;
        letter-spacing: 5px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        margin-top: 30px;
        position: relative;
        display: inline-block;
    }
    .hero-subtitle::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--accent-gold),
            transparent
        );
    }

    /* Animated SVG Title */
    h1.main-title {
        perspective: 1200px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    .title-row {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        width: 100%;
        transform-style: preserve-3d;
        margin-bottom: 20px;
    }

    h1.main-title span {
        display: inline-flex;
        width: clamp(30px, 6vw, 80px); /* Slightly smaller for 2 rows */
        height: clamp(30px, 6vw, 80px);
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.2s ease-out;
        cursor: pointer;
        animation-duration: 2s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
        margin: 0 4px;
    }

    h1.main-title span:hover {
        transform: scale(1.15) translateZ(50px) translateY(-5px);
        z-index: 10;
        filter: drop-shadow(0 0 30px rgba(255, 0, 128, 1));
    }

    h1.main-title svg {
        width: 100%;
        height: 100%;
        filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.5));
    }

    .business-detail {
        stroke: #999;
        stroke-width: 1.5;
        fill: rgba(255, 255, 255, 0.05);
    }
    .luminous-accents {
        stroke: var(--accent-gold);
        stroke-width: 2;
        filter: drop-shadow(0 0 8px var(--accent-gold));
    }
    .chart-fill {
        fill: var(--accent-gold);
        opacity: 0.8;
    }

    @keyframes disappearleft {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    @keyframes disappearight {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(-50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    h1.main-title span:nth-child(odd) {
        animation-name: disappearleft;
    }
    h1.main-title span:nth-child(even) {
        animation-name: disappearight;
    }

    /* Delays handled by n-th child logic in CSS automatically or can be specific */
    h1.main-title .title-row:nth-child(1) span:nth-child(1) {
        animation-delay: 0.1s;
    }
    h1.main-title .title-row:nth-child(1) span:nth-child(2) {
        animation-delay: 0.2s;
    }
    h1.main-title .title-row:nth-child(1) span:nth-child(3) {
