                            <path
                                d="M50,20 V80 M35,20 H65 M35,80 H65"
                                stroke="#fff"
                                stroke-width="5"></path>
                            <path
                                d="M53,30 L53,60"
                                stroke="#16e3a3"
                                stroke-width="3"
                                stroke-linecap="round"
                                opacity="0.8"></path>
