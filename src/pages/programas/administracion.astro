                        <svg viewBox="0 0 100 100">
                            <path
                                d="M20,80 V20 L50,55 L80,20 V80"
                                stroke="#fff"
                                stroke-width="5"
                                fill="none"></path>
                            <rect
                                x="25"
                                y="60"
                                width="10"
                                height="15"
                                fill="#16e3a3"
                                opacity="0.4"></rect>
                            <rect
                                x="45"
                                y="65"
                                width="10"
                                height="10"
                                fill="#16e3a3"
                                opacity="0.4"></rect>
                            <rect
                                x="65"
                                y="50"
                                width="10"
                                height="25"
                                fill="#16e3a3"
                                opacity="0.4"></rect>
                        </svg>
                    </span>
                    <!-- I: Integrity Pillar -->
