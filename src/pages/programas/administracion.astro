        </section>

        <!-- CTA Section -->
        <section class="cta-container">
            <a href="#" class="btn-gold"> Descargar Retícula &rarr; </a>
            <p class="mt-4 text-xs text-gray-500 w-full">
                *Enlace pendiente de actualización
            </p>
        </section>
    </main>
</Layout>

<style>
    :root {
        --bg-color: #0a0a0a;
        --text-color: #f0f0f0;
        /* Cyan/Teal from Source */
        --accent-gold: #16e3a3;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(11, 237, 245, 0.2);
        --card-hover: rgba(11, 245, 245, 0.08);
        --secondary: #0bedf5;
    }

    /* Typography */
    h1,
    h2,
    h3,
    .btn-gold {
        font-family: "Montserrat", sans-serif;
    }
    .section-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 700; /* Bold */
        text-transform: uppercase; /* Impactful */
        letter-spacing: 4px; /* Premium spacing */
        font-size: 2.5rem;
        color: var(--accent-gold);
        text-align: center;
        margin-bottom: 60px;
        text-shadow: 0 0 20px rgba(22, 227, 163, 0.4); /* Glow */
        position: relative;
        display: inline-block;
    }

    /* Decorative line for titles */
    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-gold);
        margin: 15px auto 0;
        box-shadow: 0 0 10px var(--accent-gold);
    }
    .main-title {
        font-family: "Orbitron", sans-serif;
    }

    /* Hero */
    .hero-subtitle {
        font-size: 1.2rem;
        letter-spacing: 5px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        margin-top: 30px;
        position: relative;
        display: inline-block;
    }
    .hero-subtitle::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--accent-gold),
            transparent
        );
    }

    /* Animated SVG Title */
    h1.main-title {
        perspective: 1200px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        flex-wrap: wrap;
        margin-bottom: 30px;
        max-width: 100%;
    }

    h1.main-title span {
        display: inline-flex;
        width: clamp(20px, 4.5vw, 65px);
        height: clamp(20px, 4.5vw, 65px);
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.2s ease-out;
        cursor: pointer;
        animation-duration: 2s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
    }

    h1.main-title span:hover {
        transform: scale(1.1) translateZ(50px);
    }
    h1.main-title span:hover svg {
        stroke: var(--accent-gold);
        filter: drop-shadow(0 0 20px rgba(22, 227, 163, 0.6));
    }

    h1.main-title svg {
        width: 100%;
        height: 100%;
        fill: none;
        stroke: #fff;
        stroke-width: 2.5;
        stroke-linejoin: round;
        stroke-linecap: round;
        filter: drop-shadow(5px 5px 10px rgba(0, 0, 0, 0.5));
        transform: translateZ(20px);
        transition: all 0.3s ease;
    }

    /* Animations for Letters */
    @keyframes disappearleft {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    @keyframes disappearight {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(-50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    /* Apply animations to spans */
    h1.main-title span:nth-child(odd) {
        animation-name: disappearleft;
    }
    h1.main-title span:nth-child(even) {
        animation-name: disappearight;
    }

    /* Staggered delays */
    h1.main-title span:nth-child(1) {
        animation-delay: 0.1s;
    }
    h1.main-title span:nth-child(2) {
        animation-delay: 0.2s;
    }
    h1.main-title span:nth-child(3) {
        animation-delay: 0.3s;
    }
    h1.main-title span:nth-child(4) {
        animation-delay: 0.4s;
    }
    h1.main-title span:nth-child(5) {
        animation-delay: 0.5s;
    }
    h1.main-title span:nth-child(6) {
        animation-delay: 0.6s;
    }
    h1.main-title span:nth-child(7) {
        animation-delay: 0.7s;
    }
    h1.main-title span:nth-child(8) {
        animation-delay: 0.8s;
    }
    h1.main-title span:nth-child(9) {
        animation-delay: 0.9s;
    }
    h1.main-title span:nth-child(10) {
        animation-delay: 1s;
    }
    h1.main-title span:nth-child(11) {
        animation-delay: 1.1s;
    }
    h1.main-title span:nth-child(12) {
        animation-delay: 1.2s;
    }
    h1.main-title span:nth-child(13) {
        animation-delay: 1.3s;
    }
    h1.main-title span:nth-child(14) {
        animation-delay: 1.4s;
    }

    /* Background & Canvas */
    .background-wrapper {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
    }
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Use local image if available, otherwise Unsplash */
        background-image: url("https://images.unsplash.com/photo-1497215728101-856f4ea42174?q=80&w=2070&auto=format&fit=crop");
        background-size: cover;
        background-position: center;
        opacity: 0.4;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            #0a0a0a 0%,
            rgba(10, 10, 10, 0.8) 100%
        );
    }
    #singularity-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Cards */
    .glass-card {
        background: linear-gradient(
            145deg,
            rgba(255, 255, 255, 0.05) 0%,
            rgba(255, 255, 255, 0.01) 100%
        );
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-top: 1px solid rgba(22, 227, 163, 0.3); /* Top highlight */
        border-bottom: 1px solid rgba(22, 227, 163, 0.1);
        padding: 50px;
        border-radius: 16px;
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
        text-align: center; /* Centers the inline-block title inside */
    }

    /* Decorative element for glass card */
    .glass-card::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 0% 0%,
            rgba(22, 227, 163, 0.05),
            transparent 40%
        );
        pointer-events: none;
    }

    .objective-text {
        font-size: 1.35rem; /* Slightly larger */
        text-align: justify;
        font-weight: 300;
        color: #e0e0e0;
        line-height: 1.9;
        position: relative;
        z-index: 1;
    }

    /* Profile Grid */
    .profile-grid {
