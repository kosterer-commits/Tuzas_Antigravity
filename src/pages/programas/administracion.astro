            </div>
        </section>

        <!-- Objetivo General -->
        <section
            class="glass-card mb-16 transform hover:scale-[1.01] transition-all duration-500 max-w-5xl mx-auto"
        >
            <h2 class="section-title">Objetivo General</h2>
            <p class="objective-text">
                Formar profesionales de la administración capaces de <span
                    style="color:var(--accent-gold)"
                    >crear, dirigir e innovar las organizaciones</span
                >, optimizar los recursos, ser competitivos en un entorno
                nacional e internacional, basados en conocimientos, habilidades
                y actitudes, con una visión emprendedora, ética y humana que le
                permita contribuir al desarrollo sustentable.
            </p>
        </section>

        <!-- Perfil Profesional -->
        <section class="mb-20 text-center">
            <h2 class="section-title">Perfil Profesional</h2>
            <div class="profile-grid text-left">
                {
                    competencies.map((item, index) => (
                        <div class="profile-card reveal-on-scroll">
                            <svg
                                class="check-icon"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="20 6 9 17 4 12" />
                            </svg>
                            <p>{item}</p>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Video Section -->
        <section class="mb-20">
            <div class="video-container">
                <div style="padding:56.25% 0 0 0;position:relative;">
                    <iframe
                        style="position:absolute;top:0;left:0;width:100%;height:100%;"
                        src="https://www.youtube.com/embed/jI6OKWQMack"
                        title="Video Promocional Administración"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                    >
                    </iframe>
