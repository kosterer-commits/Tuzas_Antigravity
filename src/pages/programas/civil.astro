        color: var(--accent-gold);
        text-align: center;
        margin-bottom: 60px;
        text-shadow: 0 0 20px rgba(46, 204, 113, 0.4);
        position: relative;
        display: inline-block;
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-gold);
        margin: 15px auto 0;
        box-shadow: 0 0 10px var(--accent-gold);
    }

    .main-title {
        font-family: "Orbitron", sans-serif;
    }

    /* Hero */
    .hero-subtitle {
        font-size: 1.2rem;
        letter-spacing: 5px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        margin-top: 30px;
        position: relative;
        display: inline-block;
    }
    .hero-subtitle::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--accent-gold),
            transparent
        );
    }

    /* Animated SVG Title */
    h1.main-title {
        perspective: 1200px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        flex-wrap: wrap;
        margin-bottom: 30px;
        max-width: 100%;
    }

    h1.main-title span {
        display: inline-flex;
        width: clamp(20px, 4.5vw, 65px);
        height: clamp(20px, 4.5vw, 65px);
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.2s ease-out;
        cursor: pointer;
        animation-duration: 2s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
    }

    h1.main-title span:hover {
        transform: scale(1.1) translateZ(50px);
    }
    h1.main-title span:hover svg {
        stroke: var(--accent-gold);
        filter: drop-shadow(0 0 20px rgba(46, 204, 113, 0.6));
    }

    h1.main-title svg {
        width: 100%;
        height: 100%;
        fill: none;
        stroke: #fff;
        stroke-width: 2.5;
        stroke-linejoin: round;
        stroke-linecap: round;
        filter: drop-shadow(5px 5px 10px rgba(0, 0, 0, 0.5));
        transform: translateZ(20px);
        transition: all 0.3s ease;
    }

    @keyframes disappearleft {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    @keyframes disappearight {
        0% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
        50% {
            transform: skew(-50deg) translateY(-150%) scale(0.5);
            filter: drop-shadow(0 0 50px var(--accent-gold));
            opacity: 0;
        }
        100% {
            transform: skew(0) translateY(0) scale(1);
            opacity: 1;
        }
    }

    h1.main-title span:nth-child(odd) {
        animation-name: disappearleft;
    }
    h1.main-title span:nth-child(even) {
        animation-name: disappearight;
    }

    /* Staggered delays */
    h1.main-title span:nth-child(1) {
        animation-delay: 0.1s;
    }
    h1.main-title span:nth-child(2) {
        animation-delay: 0.2s;
    }
    h1.main-title span:nth-child(3) {
        animation-delay: 0.3s;
    }
    h1.main-title span:nth-child(4) {
        animation-delay: 0.4s;
    }
    h1.main-title span:nth-child(5) {
        animation-delay: 0.5s;
