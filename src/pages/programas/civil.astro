<script>
    const canvas = document.getElementById(
        "singularity-canvas",
    ) as HTMLCanvasElement;

    if (canvas) {
        const ctx = canvas.getContext("2d");
        const aura = document.querySelector(".quantum-aura") as HTMLElement;
        const cursor = document.querySelector(
            ".cursor-singularity",
        ) as HTMLElement;

        const resize = () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        };
        window.addEventListener("resize", resize);
        resize();

        const stars: {
            x: number;
            y: number;
            size: number;
            vx: number;
            vy: number;
        }[] = [];
        const starCount = 80;
        const connectionDistance = 150;
        const accentColor = "#2ecc71"; // Emerald Green

        for (let i = 0; i < starCount; i++) {
            stars.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                size: Math.random() * 2,
                vx: (Math.random() - 0.5) * 0.5,
                vy: (Math.random() - 0.5) * 0.5,
            });
        }

        let mouse = { x: -1000, y: -1000 };

        document.addEventListener("mousemove", (e) => {
            mouse.x = e.clientX;
            mouse.y = e.clientY;

            if (aura) {
                aura.style.opacity = "1";
                aura.style.left = mouse.x + "px";
                aura.style.top = mouse.y + "px";
            }
            if (cursor) {
                cursor.style.opacity = "1";
                cursor.style.left = mouse.x + "px";
                cursor.style.top = mouse.y + "px";
            }
        });

        const animate = () => {
            if (!ctx) return;

            ctx.clearRect(0, 0, canvas.width, canvas.height);

            stars.forEach((star) => {
                star.x += star.vx;
                star.y += star.vy;

                if (star.x < 0 || star.x > canvas.width) star.vx *= -1;
                if (star.y < 0 || star.y > canvas.height) star.vy *= -1;

                ctx.fillStyle = accentColor;
                ctx.globalAlpha = 0.5;
                ctx.beginPath();
                ctx.arc(star.x, star.y, star.size, 0, Math.PI * 2);
                ctx.fill();

                const dist = Math.hypot(star.x - mouse.x, star.y - mouse.y);
                if (dist < connectionDistance) {
                    ctx.strokeStyle = accentColor;
                    ctx.globalAlpha = (1 - dist / connectionDistance) * 0.6;
                    ctx.lineWidth = 0.5;
                    ctx.beginPath();
                    ctx.moveTo(star.x, star.y);
                    ctx.lineTo(mouse.x, mouse.y);
                    ctx.stroke();
                }
            });

            requestAnimationFrame(animate);
        };

        animate();
    }
</script>
