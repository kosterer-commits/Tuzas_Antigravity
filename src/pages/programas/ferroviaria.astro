<style>
    :root {
        --bg-color: #0a0a0a;
        --text-color: #f0f0f0;
        /* Steel Orange Theme */
        --accent-gold: #ff6a00; /* Steel Orange */
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 106, 0, 0.2);
        --card-hover: rgba(255, 106, 0, 0.08);
    }

    /* Typography */
    h1,
    h2,
    h3,
    .btn-gold {
        font-family: "Montserrat", sans-serif;
    }
    .section-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-size: 2.5rem;
        color: var(--accent-gold);
        text-align: center;
        margin-bottom: 60px;
        text-shadow: 0 0 20px rgba(255, 106, 0, 0.4);
        position: relative;
        display: inline-block;
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-gold);
        margin: 15px auto 0;
        box-shadow: 0 0 10px var(--accent-gold);
    }

    .main-title {
        font-family: "Orbitron", sans-serif;
    }

    /* Hero */
    .hero-subtitle {
        font-size: 1.2rem;
        letter-spacing: 5px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        margin-top: 30px;
        position: relative;
        display: inline-block;
    }
    .hero-subtitle::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--accent-gold),
            transparent
        );
    }

    /* Animated SVG Title - TRAIN */
    h1.main-title {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        gap: 0px; /* Connected */
        flex-wrap: nowrap;
        overflow-x: auto;
        padding-bottom: 20px;
        margin-bottom: 30px;
        height: 160px;
        perspective: 1200px;
        position: relative;
        scrollbar-width: none;
    }
    h1.main-title::-webkit-scrollbar {
        display: none;
    }

    /* Track/Rails */
    h1.main-title::before {
        content: "";
        position: absolute;
        bottom: 22px;
        left: 0;
        width: 100%;
        height: 15px;
        background:
            linear-gradient(to bottom, #aaa 0%, #777 100%) 0 2px / 100% 4px
                no-repeat,
            repeating-linear-gradient(
                    90deg,
                    #222 0,
                    #222 6px,
                    transparent 6px,
                    transparent 20px
                )
                0 6px / 100% 6px no-repeat;
        z-index: 0;
        opacity: 0;
        animation: fadeInTrack 2s ease-out forwards 1s;
    }

    h1.main-title span {
        display: inline-flex;
        width: clamp(50px, 8vw, 100px);
        height: clamp(65px, 10vw, 130px);
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.2s ease-out;
        cursor: pointer;
        animation: assembleTrain 1.5s cubic-bezier(0.25, 0.1, 0.25, 1) backwards;
        transform-origin: bottom center;
    }

    /* Couplings */
    h1.main-title span:not(:last-child)::after {
        content: "";
        position: absolute;
        bottom: 18px;
        right: -6px;
        width: 12px;
        height: 6px;
        background: #555;
        border-radius: 3px;
        z-index: -1;
    }

    h1.main-title span:hover {
        transform: scale(1.1) translateY(-5px);
        z-index: 10;
        filter: drop-shadow(0 0 15px rgba(255, 106, 0, 0.8));
    }

    h1.main-title svg {
        width: 100%;
        height: 100%;
        stroke-width: 2.5;
        stroke-linecap: round;
        stroke-linejoin: round;
        filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.5));
    }

    .train-fill {
        fill: rgba(255, 106, 0, 0.1);
    }
    .wheel {
        fill: #111;
        stroke: #888;
        stroke-width: 2;
    }
    .blinker {
        filter: drop-shadow(0 0 5px red);
        animation: blink 1s infinite alternate;
    }

    @keyframes assembleTrain {
        0% {
            transform: translateX(100vw);
            opacity: 0;
        }
        60% {
            transform: translateX(-20px);
        }
        100% {
            transform: translateX(0);
            opacity: 1;
        }
    }
    @keyframes fadeInTrack {
        to {
            opacity: 1;
        }
    }
    @keyframes blink {
        from {
            opacity: 0.5;
        }
        to {
            opacity: 1;
        }
    }

    /* Smoke Animation */
    @keyframes puff {
        0% {
            transform: translateY(0) scale(0.5);
            opacity: 0;
        }
        20% {
            opacity: 0.8;
            transform: translateY(-20px) scale(1);
        }
        100% {
            transform: translateY(-80px) scale(3);
            opacity: 0;
        }
    }
    .smoke {
        fill: rgba(255, 255, 255, 0.6);
        opacity: 0;
        animation: puff 3s infinite ease-out;
    }

    /* Staggered Entrance */
    h1.main-title span:nth-child(1) {
        animation-delay: 0.1s;
        z-index: 11;
    }
    h1.main-title span:nth-child(2) {
        animation-delay: 0.2s;
        z-index: 10;
    }
    h1.main-title span:nth-child(3) {
        animation-delay: 0.3s;
        z-index: 9;
    }
    h1.main-title span:nth-child(4) {
        animation-delay: 0.4s;
        z-index: 8;
    }
    h1.main-title span:nth-child(5) {
        animation-delay: 0.5s;
        z-index: 7;
    }
    h1.main-title span:nth-child(6) {
        animation-delay: 0.6s;
        z-index: 6;
    }
    h1.main-title span:nth-child(7) {
        animation-delay: 0.7s;
        z-index: 5;
    }
    h1.main-title span:nth-child(8) {
        animation-delay: 0.8s;
        z-index: 4;
    }
    h1.main-title span:nth-child(9) {
        animation-delay: 0.9s;
        z-index: 3;
    }
    h1.main-title span:nth-child(10) {
        animation-delay: 1s;
        z-index: 2;
    }
    h1.main-title span:nth-child(11) {
        animation-delay: 1.1s;
        z-index: 1;
    }

    /* Background & Canvas */
    .background-wrapper {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
    }
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Unsplash fallback for Railway/Train */
        background-image: url("https://images.unsplash.com/photo-1474487548417-781cb714d22d?q=80&w=2070&auto=format&fit=crop");
        background-size: cover;
        background-position: center;
        opacity: 0.3;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            #0a0a0a 0%,
            rgba(10, 10, 10, 0.8) 100%
        );
    }
    #railway-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Cards */
