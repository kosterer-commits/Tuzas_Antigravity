                                <circle
                                    cx="0"
                                    cy="0"
                                    r="5"
                                    class="smoke"
                                    style="animation-delay: 2s;"></circle>
                                <circle
                                    cx="0"
                                    cy="0"
                                    r="6"
                                    class="smoke"
                                    style="animation-delay: 2.8s;"></circle>
                                <circle
                                    cx="0"
                                    cy="0"
                                    r="7"
                                    class="smoke"
                                    style="animation-delay: 3.6s;"></circle>
                            </g>

                            <path
                                d="M10,105 L25,105 L20,80 Z"
                                fill="#333"
                                stroke="#ff6a00"></path>
                            <!-- Cowcatcher -->
                            <!-- Letter F -->
