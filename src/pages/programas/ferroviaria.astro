            <div class="text-center w-full max-w-7xl mx-auto">
                <h1 class="main-title" id="parallax-title">
                    <!-- F: Locomotive -->
                    <span>
                        <svg viewBox="0 0 100 120">
                            <!-- Wheels -->
                            <circle cx="30" cy="100" r="10" class="wheel"
                            ></circle>
                            <circle cx="70" cy="100" r="10" class="wheel"
                            ></circle>
                            <!-- Cab/Body -->
