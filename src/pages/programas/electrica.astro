<script>
    // Main Singularity Effect
    const canvas = document.getElementById(
        "singularity-canvas",
    ) as HTMLCanvasElement;
    if (canvas) {
        const ctx = canvas.getContext("2d");
        const aura = document.querySelector(".quantum-aura") as HTMLElement;
        const cursor = document.querySelector(
            ".cursor-singularity",
        ) as HTMLElement;

        const resize = () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        };
        window.addEventListener("resize", resize);
        resize();

        const stars: {
            x: number;
            y: number;
            size: number;
            vx: number;
            vy: number;
        }[] = [];
        const starCount = 80;
        const connectionDistance = 150;
        const accentColor = "#ff9900";

        for (let i = 0; i < starCount; i++) {
            stars.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                size: Math.random() * 2,
                vx: (Math.random() - 0.5) * 0.5,
                vy: (Math.random() - 0.5) * 0.5,
            });
        }

        let mouse = { x: -1000, y: -1000 };

        document.addEventListener("mousemove", (e) => {
            mouse.x = e.clientX;
            mouse.y = e.clientY;

            if (aura) {
                aura.style.opacity = "1";
                aura.style.left = mouse.x + "px";
                aura.style.top = mouse.y + "px";
            }
            if (cursor) {
                cursor.style.opacity = "1";
                cursor.style.left = mouse.x + "px";
                cursor.style.top = mouse.y + "px";
            }
        });

        const animate = () => {
            if (!ctx) return;
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            stars.forEach((star) => {
                star.x += star.vx;
                star.y += star.vy;

                if (star.x < 0 || star.x > canvas.width) star.vx *= -1;
                if (star.y < 0 || star.y > canvas.height) star.vy *= -1;

                ctx.fillStyle = accentColor;
                ctx.globalAlpha = 0.5;
                ctx.beginPath();
                ctx.arc(star.x, star.y, star.size, 0, Math.PI * 2);
                ctx.fill();

                const dist = Math.hypot(star.x - mouse.x, star.y - mouse.y);
                if (dist < connectionDistance) {
                    ctx.strokeStyle = accentColor;
                    ctx.globalAlpha = (1 - dist / connectionDistance) * 0.6;
                    ctx.lineWidth = 0.5;
                    ctx.beginPath();
                    ctx.moveTo(star.x, star.y);
                    ctx.lineTo(mouse.x, mouse.y);
                    ctx.stroke();
                }
            });
            requestAnimationFrame(animate);
        };
        animate();
    }

    // Lightning Effect
    const lCanvas = document.getElementById(
        "lightning-canvas",
    ) as HTMLCanvasElement;
    const bgCanvas = document.getElementById(
        "content-background-lightning",
    ) as HTMLCanvasElement;

    if (lCanvas && bgCanvas) {
        const lCtx = lCanvas.getContext("2d");
        const bgCtx = bgCanvas.getContext("2d");

        const resizeLightning = () => {
            lCanvas.width = window.innerWidth;
            lCanvas.height = window.innerHeight;
            bgCanvas.width = window.innerWidth;
            bgCanvas.height = window.innerHeight;

            const hero = document.querySelector(".hero-section") as HTMLElement;
            if (hero) {
                lCanvas.width = hero.offsetWidth;
                lCanvas.height = hero.offsetHeight;
            }
        };
        window.addEventListener("resize", resizeLightning);
        resizeLightning();

        let lightningActive = false;

        const drawLightning = (
            ctx: CanvasRenderingContext2D,
            x1: number,
            y1: number,
            x2: number,
            y2: number,
            segments: number,
            width: number,
        ) => {
            if (segments === 0) {
                ctx.beginPath();
                ctx.moveTo(x1, y1);
                ctx.lineTo(x2, y2);
                ctx.lineWidth = width;
                ctx.strokeStyle = Math.random() > 0.5 ? "#fff" : "#ff9900";
                ctx.shadowBlur = 15;
                ctx.shadowColor = "#ff9900";
                ctx.stroke();
                return;
            }

            const midX = (x1 + x2) / 2 + (Math.random() - 0.5) * 50;
            const midY = (y1 + y2) / 2 + (Math.random() - 0.5) * 50;

            drawLightning(ctx, x1, y1, midX, midY, segments - 1, width);
            drawLightning(ctx, midX, midY, x2, y2, segments - 1, width);
        };

        const animateLightning = () => {
            if (!lCtx || !bgCtx) return;
            lCtx.clearRect(0, 0, lCanvas.width, lCanvas.height);
            bgCtx.clearRect(0, 0, bgCanvas.width, bgCanvas.height);

            // Hero Lightning
            if (lightningActive && Math.random() > 0.8) {
                lCtx.shadowBlur = 0;
                for (let i = 0; i < 3; i++) {
                    const startX = Math.random() * lCanvas.width;
                    const startY = Math.random() > 0.5 ? 0 : lCanvas.height;
                    const endX = Math.random() * lCanvas.width;
                    const endY = Math.random() * lCanvas.height;
                    drawLightning(
                        lCtx,
                        startX,
                        startY,
                        endX,
                        endY,
                        5,
                        2 + Math.random() * 3,
                    );
                }
                if (Math.random() > 0.95) {
                    lCtx.fillStyle = "rgba(255, 153, 0, 0.05)";
                    lCtx.fillRect(0, 0, lCanvas.width, lCanvas.height);
                }
            }

            // Global Background Lightning (Always active, subtle)
            if (Math.random() > 0.97) {
                bgCtx.shadowBlur = 0;
                const startX = Math.random() * bgCanvas.width;
                const startY = Math.random() > 0.5 ? 0 : bgCanvas.height;
                const endX = Math.random() * bgCanvas.width;
                const endY = Math.random() * bgCanvas.height;
                drawLightning(
                    bgCtx,
                    startX,
                    startY,
                    endX,
                    endY,
                    5,
                    1 + Math.random() * 1.5,
                );
            }

            requestAnimationFrame(animateLightning);
        };
        animateLightning();

        // Trigger lightning burst after initial load
        setTimeout(() => {
            lightningActive = true;
            setTimeout(() => {
                lightningActive = false;
            }, 3000);
        }, 2000);
    }
</script>
