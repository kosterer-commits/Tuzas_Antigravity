---
import Layout from "../../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
---

<Layout title="Proceso de Admisión - Maestría en Ingeniería Mecánica">
    <!-- contenido de pagina -->
    <div
        style="margin: auto; text-align: center; width: 100%; padding: 5%;"
        class="mt-28"
    >
        <h1
            class="align-center display-2"
            style="margin-bottom: 15px; font-weight: 900; color: #1B396A;"
        >
            Proceso de Admisión
        </h1>
        <h3
            class="align-center display-4"
            style="margin-bottom: 15px; color: #4b5563;"
        >
            Maestría en Ingeniería Mecánica
        </h3>

        <div style="margin-bottom: 50px; margin-top: 30px;">
            <a
                href={`${BASE}pdf/maestria/Admision_Mtria_2025_B.pdf`}
                target="_blank"
                class="btn"
                style="background-color: #1B396A; color: white !important; padding: 15px 35px; border-radius: 8px; font-size: 1.1rem; font-weight: 700; display: inline-flex; align-items: center; gap: 12px; text-decoration: none; box-shadow: 0 4px 15px rgba(27, 57, 106, 0.2); transition: all 0.3s ease;"
            >
                <i class="fas fa-eye" style="font-size: 1.4rem;"></i> Ver Convocatoria
                de Admisión
            </a>
        </div>
    </div>
</Layout>
