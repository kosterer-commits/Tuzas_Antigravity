---
import Layout from "../../../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
---

<Layout title="Dr. Abdiel Gómez Mercado - Profesores Maestría">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            /* Imagen de fondo mecánica con overlay oscuro */
            background-image:
                linear-gradient(rgba(10, 14, 39, 0.85), rgba(10, 14, 39, 0.85)),
                url("/images/Fondos/mecanica2.png");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            position: relative;
            overflow-x: hidden;
            font-family: "Roboto", sans-serif;
        }

        /* Remove nebula effects */
        body::before,
        body::after,
        .nebula-blob {
            display: none;
        }

        .cv-container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 60px 20px;
            position: relative;
        }

        /* Cards */
        .glass-card {
            background: rgba(255, 255, 255, 0.94);
            backdrop-filter: blur(16px) saturate(180%);
            border: 1px solid rgba(255, 255, 255, 0.125);
            border-radius: 24px;
            padding: 40px;
            margin-bottom: 40px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
            transition:
                transform 0.3s ease,
                box-shadow 0.3s ease;
            border-left: 10px solid #1b396a;
        }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.3);
        }

        /* Header Profile */
        .profile-header {
            display: flex;
            align-items: center;
            gap: 40px;
            flex-wrap: wrap;
            justify-content: center; /* Center initially for horizontal symmetry above tabs */
        }

        @media (min-width: 769px) {
            .profile-header {
                justify-content: flex-start;
            }
        }

        .profile-image-container {
            flex: 0 0 auto;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            overflow: hidden;
            border: 5px solid #1b396a;
            box-shadow: 0 10px 25px rgba(27, 57, 106, 0.4);
        }

        .profile-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-info {
            flex: 1;
            min-width: 300px;
        }

        .profile-name {
            font-size: 2.5rem;
            font-weight: 800;
            color: #1b396a;
            margin-bottom: 5px;
            text-transform: uppercase;
            text-align: center;
        }

        @media (min-width: 769px) {
            .profile-name {
                text-align: left;
            }
        }

        .profile-title {
            font-size: 1.2rem;
            color: #c5a059;
            font-weight: 700;
            margin-bottom: 20px;
            letter-spacing: 1px;
            text-align: center;
        }

        @media (min-width: 769px) {
            .profile-title {
                text-align: left;
            }
        }

        .contact-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        @media (min-width: 769px) {
            .contact-list {
                align-items: flex-start;
            }
        }

        .contact-list li {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 8px;
            font-size: 1rem;
            color: #334155;
        }

        .contact-list li i {
            color: #1b396a;
            width: 20px;
        }

        .contact-list a {
            color: #334155;
            text-decoration: none;
            transition: color 0.2s;
        }

        .contact-list a:hover {
            color: #c5a059;
        }

        /* Badges for Areas of Interest */
        .interest-section {
            margin-top: 20px;
            text-align: center;
        }

        @media (min-width: 769px) {
            .interest-section {
                text-align: left;
            }
        }

        .interest-title {
            font-size: 1.1rem;
            color: #334155;
            font-weight: 700;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .interest-badges {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            justify-content: center;
        }

        @media (min-width: 769px) {
            .interest-badges {
                justify-content: flex-start;
            }
        }

        .badge {
            background: rgba(27, 57, 106, 0.1);
            color: #1b396a;
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.9rem;
            border: 1px solid rgba(27, 57, 106, 0.2);
        }

        /* Tab Buttons Row */
        .tabs-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center; /* Horizontally aligned */
            margin-bottom: 20px; /* Added separation */
            position: relative;
            z-index: 10;
        }

        .tab-btn {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 15px 25px;
            font-size: 1.1rem;
            font-weight: 700;
            color: #1b396a;
            cursor: pointer;
            border-radius: 12px; /* Fully rounded since separated */
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            flex: 1 1 auto;
            justify-content: center;
            min-width: 180px;
        }

        .tab-btn:hover {
            background: rgba(255, 255, 255, 0.9);
            transform: translateY(-2px);
        }

        .tab-btn.active {
            background: #1b396a;
            color: #ffffff;
            border-color: #1b396a;
            box-shadow: 0 5px 15px rgba(27, 57, 106, 0.3); /* Adjusted shadow */
            z-index: 12;
        }

        .tab-btn i {
            color: #c5a059;
        }

        .tab-btn.active i {
            color: #fff;
        }

        /* Content Area */
        .tab-content-area {
            background: rgba(255, 255, 255, 0.94);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.125);
            border-radius: 24px; /* Fully rounded */
            /* border-top: 5px solid #1B396A; Removed top border connection style */
            border-left: 5px solid #1b396a; /* Accent on left instead */
            padding: 40px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 5;
        }

        .tabs-container + .tab-content-area {
            /* Reset any special connection styling */
            margin-top: 0;
        }

        .tab-panel {
            display: none;
            animation: fadeIn 0.4s ease;
        }

        .tab-panel.active {
            display: block;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Content Styling within Panels */
        .card-content p,
        .card-content li {
            font-size: 1.05rem;
            line-height: 1.7;
            color: #334155;
            margin-bottom: 12px;
            text-align: justify;
        }

        .card-content ul,
        .card-content ol {
            padding-left: 20px;
            margin-top: 0;
        }

        .card-content ul li {
            list-style-type: none;
            position: relative;
            padding-left: 25px;
        }

        .card-content ul li::before {
            content: "\f058"; /* Check circle */
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            position: absolute;
            left: 0;
            color: #c5a059;
            font-size: 1rem;
            top: 2px;
        }

        /* Publication Groups */
        .pub-group {
            margin-bottom: 30px;
        }

        .pub-group h4 {
            color: #0f172a;
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 15px;
            border-left: 4px solid #c5a059;
            padding-left: 10px;
        }

        @media (max-width: 768px) {
            .glass-card {
                padding: 25px;
            }
            .profile-header {
                justify-content: center;
                text-align: center;
            }
            .profile-image-container {
                width: 150px;
                height: 150px;
                margin: 0 auto;
            }
            .profile-info {
                width: 100%;
            }
            .profile-name {
                font-size: 1.8rem;
            }
            .contact-list li {
                justify-content: center;
            }
            .interest-badges {
                justify-content: center;
            }

            /* Stack tabs on mobile for usability */
            .tabs-container {
                flex-direction: column;
                gap: 5px;
            }

            .tab-btn {
                width: 100%;
                border-radius: 8px;
                margin-bottom: 0;
            }

            .tab-btn.active {
                border-bottom: 1px solid #1b396a;
            }

            .tab-content-area {
                border-radius: 12px;
                border-top: 5px solid #1b396a;
                padding: 25px;
            }
        }
    </style>

